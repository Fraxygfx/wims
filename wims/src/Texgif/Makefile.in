# @configure_input@

wims_home=../..
cc=@CC@
cflags=@CFLAGS@ -Wall
LDFLAGS=@LDFLAGS@
CPPFLAGS=@CPPFLAGS@

defines=@DEFINES@
STRIP=@STRIP@
lopt=-L$(wims_home)/lib -lwims -lm $(rpath)
texgifobjects=basic.o colors.o tfm.o gf.o font.o image.o dvi.o

all: texgif

%.o: %.c
	$(cc) -o $@ $(cflags) $(defines) -c $<

clean::
	rm -f *.o texgif
	rm -fR test/texg* test/[0-9]*

distclean: clean
	rm -f $(wims_home)/public_html/bin/tex..gif
	rm -f Makefile

texgif: *.h $(texgifobjects)
	$(cc) $(cflags) $(CPPFLAGS) $(LDFLAGS) $(defines) $(texgifobjects) texgif.c -lgd $(lopt) -o texgif
	$(STRIP) texgif
	cp texgif $(wims_home)/public_html/bin/tex..gif

colors.c: ../Flydraw/colors colors.sh
	./colors.sh
