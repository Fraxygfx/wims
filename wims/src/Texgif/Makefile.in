# @configure_input@

wims_home=../..
cc=@CC@
cflags=@CFLAGS@ -Wall
LDFLAGS=@LDFLAGS@
CPPFLAGS=@CPPFLAGS@

defines=@DEFINES@
STRIP=@STRIP@

all: texgif

clean::
	rm -f texgif
	rm -fR test/texg* test/[0-9]*

distclean: clean
	rm -f $(wims_home)/public_html/bin/tex..gif
	rm -f Makefile

texgif: *.c colors.c *.h
	$(cc) $(cflags) $(CPPFLAGS) $(LDFLAGS) $(defines) texgif.c -lgd -lm -o texgif
	$(STRIP) texgif
	cp texgif $(wims_home)/public_html/bin/tex..gif

colors.c: ../Flydraw/colors colors.sh
	./colors.sh

