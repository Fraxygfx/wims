	$(cc) $(cflags) $(CPPFLAGS) $(LDFLAGS) Plouffe.c -lm -o $@
	$(STRIP) $@
	rm -f $(PUBDIR)/$@; cp $@ $(PUBDIR)

translator: suffix.o translator.c
	$(cc) $(cflags) $(CPPFLAGS) $(LDFLAGS) translator.c suffix.o  $(lopt) @STATIC_LIB@ -o translator
	$(STRIP) translator
	cp translator $(PUBDIR)

html2msg: html2msg.c ../hmname.c
	$(cc) $(cflags) $(CPPFLAGS) $(LDFLAGS) html2msg.c $(lopt) -o html2msg
	$(STRIP) html2msg
	cp html2msg $(PUBDIR)

huffman : huffman.c
