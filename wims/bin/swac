#! /bin/sh
version=1.0

##this script transfer swac-shtooka ressources at the good place
##author Bernadette Perrin-Riou
packs="deu-balm-alexandra
deu-balm-ulrike-verbs
eng-balm-verbs
eng-wcp-us
fra-balm-conjug
fra-balm-flora-expr
fra-balm-flora-num
fra-balm-voc
fra-wims-voc
nld-wcp
spa-wims-octavio
swe-balm-num
swe-balm-voc
"
adresse=download.shtooka.net
 
cd `dirname $0`/..
wimshome=`pwd`
swac=$wimshome/public_html/scripts/data/swac
cd $swac ;
echo "$version" > version.tmp;
for i in $packs; do
  j=${i}_mp3 ;
  wget http://$adresse/$j.tar; echo "wget $adresse/$j.tar" ;
  tar xf $j.tar;
  cd $j ; cp -r * $swac/$i/ ; cd $swac ; rm $j.tar ; rm -r $j;
  echo "$i" >> version.tmp ;
done ;

cd $swac ; cp version.tmp version ; rm version.tmp; 
./mkindex ; 
