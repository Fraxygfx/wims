!set title=Lettre de l'alphabet
!if $wims_read_parm!=$empty
 !goto $wims_read_parm
!endif
oef2wims_version=3.22

ansorder=r
varcnt=10
prevarcnt=5
postvarcnt=4
replycnt=1
choicecnt=0
conditioncnt=1
feedbackcnt=1
format=html

val1=$imagedir
val2=$confparm1
val3=$confparm2
val4=$confparm3
val5=$confparm4

!if $testcondition=yes
 !goto test
!endif
!if $status=waiting
 !exit
!endif

val6=a,b,c,d,e,f,g,h,i,j,k,l,m,n,o,p,q,r,s,t,u,v,w,x,y,z
tmp0=!randint 1, 20

val7=$[rint($(tmp0))]
val8=$[rint(0)]
val9=
val10=r1
dynsteps=yes
oefsteps=$val10 
nextstep=!nosubst $val10 
!readproc oef/steps.proc
replytype1=nocase
replyname1=lettre suivant $(val6[$val7])
replygood1=?analyze 11
question=__EXECUTED_1692754_EXERCISE__

!goto stat

!exit

:question
$()Ecrire la lettre de l'alphabet qui suit  la lettre $(val6[$val7]) : 	<p align="center">	      
!if  r1 isitemof $val10 
$()	         
!read oef/embed.phtml r1,5 
$() <font color=red>$val9</font>	       
!else
$()  	      <font color=green>$(val6[$val7 + 1])</font>	      
!endif
$()	 </p>	
$()
!exit

:hint
$()
$()
!exit

:help
$()
$()
!exit

:solution
$()
$()
!exit

:postdef
val9=$m_reply1
val10=

!ifval $m_reply1 notsametext $(val6[$val7 + 1]) and $val8 < 3 
val10= r1
!endif
val8=$[rint($val8 + 1)]

!exit

:feedback
!ifval $val8 > 1
 <p>Vous avez fait $val8 essais
$()
!endif

!exit

:test

!ifval $val11 issametext $(val6[$val7 + 1])
 condtest1=1
!else
 condtest1=0
!endif
condname1=

!exit

:stat
vsavelist=6,7,8,9,10,11
embedcnt=1
