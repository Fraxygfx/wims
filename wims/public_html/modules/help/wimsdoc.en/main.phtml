!if $style=integral or $style=indexed
<h2 class="wimscenter">-------- Table of Contents --------</h2>
<a id="index"></a>
<ul>
 !for set in user,ref
  <li><h4>$(title_$set)</h4>
  <ol>
  !for i in $($(set)_doc)
   <li>
   <a id="toc_$i"></a>
   $(ref1)$i$(ref2)$i">$(title_$i)</a>
   </li>
  !next i
  </ol> 
  </li>
  !next set
 </ul>
!else # folding
 <p>Click on a title to expand or fold out its content.</p>
 !for set in user,ref
  <hr/><h2 class="wimscenter">$(title_$set)</h2>
  !for i in $($(set)_doc)
   <a id="$i"></a>
   !if ,$i isin $expand
    <hr/><h3>
    !href cmd=resume&op=close&subject=$i#$i $(title_$i)
    </h3>
    !read $i.phtml
    <hr/>
   !else
    <h4>$(ref1)$i$(ref2)$i">$(title_$i)</a></h4>
   !endif
  !next i
 !next set
!endif integral or indexed versus folding

!if $style=integral
 !for i in $user_doc,$ref_doc
  <hr/>
    <a id="$i"></a>
    <h3 class="wimscenter">$(title_$i)</h3>

  !read $i.phtml
  <p>
  <a href="#index">Table of Contents</a>
  </p>
 !next i
!endif

!if $style=indexed
 !for set in $user_doc,$ref_doc
  !if $set isin $subject
   <a id="$set"></a>
   <hr/><h3 class="wimscenter">$(title_$set)</h3>
   !read $set.phtml
  !endif
 !next set
!endif

!tail

