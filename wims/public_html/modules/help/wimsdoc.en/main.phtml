  !read $i.phtml
  <p>
  <a href="#index">Table of Contents</a>
 !next i
!endif

!if $style=indexed
 !for set in $user_doc,$ref_doc
  !if $set isin $subject
   <a name="$set"></a>
   <hr/><center><h3>$(title_$set)</h3></center>
   !read $set.phtml
   <p>
  !endif
 !next set
