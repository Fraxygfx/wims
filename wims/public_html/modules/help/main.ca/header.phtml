!set lan=ca
!!<HTML><HEAD>
!!$wims_html_header
!!</head>
!if $wims_window=new
 !!!set w_resize=onload="self.resizeTo(550,550);self.moveTo(30,50);"
 !set wims_html_onload=!append word self.resizeTo(550,550);self.moveTo(30,50); to $wims_html_onload
!endif

!header1

!!<body $wims_htmlbody $w_resize>
<div class=wimsmenu>
!robottrap

<center><table border=0 cellspacing=0 cellpadding=5 bgcolor="$wims_ref_bgcolor">
<tr><td align=center>
!if _ isin $wims_subsession
 <a href="#" onclick="window.close()">Tancar la finestra d'ajuda</a>
!else
 !href session=$wims_session.1 Inici WIMS
!endif
!if $style=print
 &nbsp;
 !href module=$module&chapter=0 Versió interactiva
 !set chapter=-1
 !goto tabend
!endif
!if $chapter>0
 <td align=center>
 !href module=$module&chapter=0 Índex de l'ajuda
&nbsp;
!endif
<td align=center>
!href module=$module&style=print Versió per imprimir
&nbsp;
!if $chapter>1
 <td align=center>
 !href module=$module&chapter=$[$chapter-1] Capítol anterior
!endif
!if $chapter<$chaptercnt
 <td align=center>
 !href module=$module&chapter=$[$chapter+1] Capítol següent
!endif

:tabend
</table></center></div><div class=wimsbody>

!if $chapter>0
 !set l=!line 1 of $(chapter$chapter)
 !set ll=!word $chapter of I II III IV V VI VII IIIV IX X
 !set l=Capítol $ll. $l
!else
 !if $chapter<0
  !set l=Versió per imprimir
 !else
  !set l=Índex general
 !endif
!endif

<p><center><h1>WIMS Ajuda<br><font size="+1"><b>
$l</b></font>
</h1></center> <p>

