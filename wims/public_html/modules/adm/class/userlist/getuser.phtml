 !endif
!else
 !if $wims_showlivret!=no
  !set livret_nbcomp=!recordcnt wimshome/log/classes/$wims_class/livret/.comps
  !if $livret_nbcomp >0
   !set wims_menu_items=!append line livret,1,module=adm/class/livret to $wims_menu_items
  !endif
 !endif
!endif
