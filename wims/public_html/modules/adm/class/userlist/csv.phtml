 !getfile $outfile $outfile
 </tt> $name_download
 <p><hr> <p>
!endif

!if $processed=yes and $error=$empty 
 !if $remark$change$added$missing$erased!=$empty or $manual=yes
  $name_deposit<ul>
  !if $change!=$empty
   <li>$name_infochanged: <tt class="wims_login">
   !replace internal , by ,$ $ in $change
   </tt></li>
  !endif
  !if $added!=$empty
   <li>$name_added: <tt class="wims_login">
   !replace internal , by ,$ $ in $added
   </tt></li>
  !endif
   !if $bad_login!=$empty
   <li>$name_badlogin: <tt class="wims_login">
   !replace internal , by ,$ $ in $bad_login
   </tt></li>
  !endif
  !if full iswordof $remark
   <li>$name_warning1</li>
  !endif
  !if noprop iswordof $remark
   <li>$name_warning2</li>
  !endif
  !if noauto iswordof $remark
   <li>$name_warning3</li>
  !endif
  !if $erased!=$empty
   <li>$name_warning4:
   <tt class="wims_login">
   !replace internal , by ,$ $ in $erased
   </tt></li>
  !endif
  !if $missing!=$empty
   <li>
   !if full notwordof $remark
    $name_nologin1:
   !else
    $name_nologin2:
   !endif
   <tt class="wims_login">$missing</tt>
  !endif
  </li>
  !if $manual=yes
   <li>$name_manual1
   !href module=adm/class/grades $name_check
.</li>
  !endif
  </ul>
 !else
 $name_data1
 !endif
 <p><hr> <p>
!endif

