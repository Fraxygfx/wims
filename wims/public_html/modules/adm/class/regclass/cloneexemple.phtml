!! html for create a individual class copying an exemple class

!if $step=-3
	<br/>cliquer sur la classe &agrave; cloner
	<div class="wims_content">
	!read proc/search.phtml
	!if $nbcls>0
		$table_header
		$table_hdtr<th>$wims_name_name</th><th>$wims_name_supervisor</th><th>$name_cloning</th>
		!for i=1 to $nbcls
			!let l=!line $i of $ltclass
			!distribute items $l into code,expire,inst,cl,la,ty,b,b,first,last
			!let testneighbors=!defof sharing_all in wimshome/log/classes/$code/neighbors
			!if $testneighbors=$empty
			$table_tr
				!let test=!defof class_isexemple,class_allowcloning in wimshome/log/classes/$code/.def
				
     				<td>$inst <br />
     				!if $(test[1])=yes or $(test[2])=yes
					!href cmd=reply&step=-2&sourcecls=$code $cl
				!else
				    $cl
				!endif
			        !if $class_info!=$empty
     					<br /> $class_info
     				!endif
			        </td>
				<td>
				    $first $last
				</td>
    				<td>
    				    !let test=!defof class_isexemple,class_allowcloning in wimshome/log/classes/$code/.def
				    !if $(test[1])=yes
					$name_free
				    !else
					!if $(test[2])=yes
					    $name_protected
					!else
					    $name_disallowed
					!endif
				    !endif
				</td>
			</tr>
			!endif
		!next i
		$table_end
	!else
		$name_nofound
	!endif
	</div>
	!exit
!endif

!if $step=-2
    !! saisie du mot de passe de clonage pour les classes priv√©es.
    $name_getcloningpwd
    !form reply
    	<input size="20" name="clonepwd" value="$clonepwd" id="clonepwd"/>
	<input type="hidden" name="step" value="-1"/>
 	<input type="submit" value="$wims_name_tosave" />
    !formend
    

!exit
!endif

!if $step>=-1
$name_cpexempleintro.
!endif


