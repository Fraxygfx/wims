 !if $jour_begin!=$empty
  $name_between <span class="wims_emph">$name_date</span>
  !if $jour_begin!=$jour_end
   $name_and <span class="wims_emph">$name_date2</span>
  !endif
 !endif
</div> 

!if $cdt_description!=$empty
 <br />$cdt_description
!endif
<p></p>

!if $cdt_nbdate=0
 $name_noinfo1.
