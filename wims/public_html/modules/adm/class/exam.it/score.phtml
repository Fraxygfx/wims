
!if $job=score
 <center><h1>$wims_classname, $wims_institutionname<br>$title</h1>
 !if $wims_user=supervisor
  (Pagina pubblica del tema d'esame)
 !endif
 </center> <p>$desc<p>
!endif

!if $error!=$empty
 <p>
 !read msg.phtml
 <p>
 !href module=home Torna alla home page del tema d'esame
. <p>
