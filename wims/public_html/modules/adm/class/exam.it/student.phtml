!set done=completato

!read adm/title.phtml 1\
$wims_classname, $wims_institutionname\
$title

!if $wims_user=supervisor
 <center>(Pagina pubblica del tema d'esame)</center>
!endif
<p>
$desc<p>

!if $error!=$empty
 <p>
 !read msg.phtml
 <p>
 !href module=home Torna alla home page
. <p>
 !exit
!endif

!if $registered<0 or ($registered>0 and $timeleft<=0)
 !changeto score.phtml
!endif

!if $exocnt=0
 Questo tema d'esame &egrave; vuoto! Si tratta probabilmente di un
 errore del docente.
!else
 Questo tema d'esame contiene i seguenti esercizi:
!! !href cmd=reply&job=student [ricarica la pagina]
 !set activeexo=0
 <p>
 !let maxcol=$[min(ceil(($exocnt+3)/10),5)]
 !let maxlig=$[ceil($exocnt/$maxcol)]
 !if $maxcol>1
  <center>
 !endif
 <table border=0 class="wims_exam">
  !for lig=1 to $maxlig
   <tr>
    !for col=1 to $maxcol
     !let i=$[$col*$maxlig+$lig-$maxlig]
      !if $i<=$exocnt
!! -------------------------- debut de la ligne correspondant à un exercice de l'examen
  !set ex=!record $i of wimshome/log/classes/$wims_class/exams/.exam$exam
  !distribute lines $ex into we,li,ti,de,op
  !set de=!trim $de
 <td>$i.</td> 
  !if $t_=yes and ($allowtype=simulation or $tryremain>0 or \
   ($tryremain=0 and $registered!=$empty))
   !if $(replied$i)>0
    <td>$ti </td><td>$done</td>
   !else
    !if $de!=$empty
     !set dt=!examdep $exam $de
   !else
     !set dt=yes
    !endif
    !if $dt=yes
     !advance activeexo
     <td>
    !href target=wims_exam cmd=new&worksheet=$exam.$i $ti
</td><td class="empty">&nbsp;</td>
     !if autogen iswordof $op and $wims_exam_remain!=$empty
      !set ss=$(wims_session)t$(exam)t$i
      !set test=!defof w_cmd in wimshome/sessions/$ss/var
      !if $test=$empty
       !set test=$wims_ref_name?wims_window=new&+session=$(wims_session)_exam&+cmd=new&+worksheet=$exam.$i
       <img src="$test" height=1 width=1 border=0>
      !endif
     !endif
    !else
     <td><b><font color=red>$ti</font></b> </td><td>&Egrave; necessario
     !href cmd=reply&job=student aver svolto con successo altri esercizi
.</td>
    !endif
   !endif
  !else
   <td>$ti.</td><td class="empty"></td>
  !endif
!! ------------------------------fin d'affichage de la ligne correspondant à  un exercice
      !endif
    !next col
   </tr>
  !next lig
 </table>
 !if $maxcol>1
  </center>
  !endif
 !if $t_=no
  Accesso negato.
  !href cmd=reply&job=student Riprova.
 !else
  !if $stries=1
   Puoi sostenere l'esame (una sola volta).
  !else
   Hai un massimo di $stries possibilità per questo esame. 
  !endif
  !if $tryremain<0 or ($tryremain=0 and ($registered=$empty or $allowtype=simulation))
   !if $trcut=0
    Hai già terminato il tuo esame, con $tried tentativi.
   !else
    Hai gi&agrave; esaurito le tue $tried possibilità.
   !endif
    Non puoi pi&ugrave; migliorare il punteggio fin qui ottenuto.
   !set exhausted=yes
  !endif
  !if $tryremain>0
   Hai ancora $tryremain possibilità.
  !endif
  !if $registered=$empty and $exhausted!=yes
   Hai $sdure minuti per completare questo esame. 
   !if $allowtype!=simulation
    Il conteggio comincia nel momento in cui selezioni uno degli esercizi
    e il tentativo sar&agrave; conteggiato
   !else
    Il conteggio comincia nel momento in cui selezioni uno degli esercizi.
   !endif
  !else
    !if $allowtype!=simulation and $tryremain=0 and $exhausted!=yes
      ATTENZIONE: questo &egrave; l'ultimo tentativo a disposizione.
   !endif
  !endif
!set wims_menu_items=!append line refresh,1,cmd=reply&job=student\
scoreexam,1,cmd=reply&job=score \
to $wims_menu_items
!!<p>
!!  !href cmd=reply&job=student Rivisualizza la pagina.
!!&nbsp;
!!  !href cmd=reply&job=score Punteggio ottenuto.
  !if $activeexo<1
  !set wims_menu_items=!append line end,1,cmd=reply&job=scorereg\
to $wims_menu_items
!!&nbsp;
!!   !href cmd=reply&job=scorereg Termina
!!   questa sessione d'esame (non ci sono più esercizi da svolgere).
  !endif
 !endif
!endif

!if $t_=yes
 !if $allowtype=simulation
  <p>Questa &egrave; la simulazione di un esame. A differenza del <em>vero</em>
  esame il server non terr&agrave; alcun conto del tentativo.
 !endif
!endif

!if $wims_user=supervisor
!set wims_menu_items=!append line backteacher,1,cmd=resume\
 to $wims_menu_items
!endif

!tail

