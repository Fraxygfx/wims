<h3>
 !href cmd=reply&job=userprop&getuser=$getuser $lastname $firstname
的作业的详细情况
<br><font size=-1>登录名: <tt>$getuser</tt>
!if $user_email!=$empty
 &nbsp;&nbsp;电邮地址: <a href="mailto:$user_email">$user_email</a>
!endif
</font></h3>
!if $eremain>0
 <p>
此参加者有一个活动中的考试对话:
 !href cmd=reply&job=userexam&getuser=$getuser $esession
!else
 !if $wims_user=supervisor and $wims_supertype=4
  !readproc adm/gateway/transfer $getuser test
  !if $transfer_test>0
   !href cmd=reply&job=transfer&getuser=$getuser 从其它班级转移他的活动
  !endif
 !endif
!endif
</center> <p>

!if $manual>0 and $gcnt>0 and $teacher!=$empty
 $table_header$table_hdtr<th>姓名<th>百分比<th>质量
 $table_tr<td>教师评分
     <td align=center>$manual%<td align=center>$mav
 $table_tr<td>服务器记录的评分
     <td align=center>$[100-$manual]%<td align=center>$per
 $table_tr<td><b>总平均</b> (/$scoremax)
     <td align=center>100%<th>$globalav
 $table_end <p>
 $table_header$table_hdtr<th colspan=3>教师评分</th>
 $table_hdtr<th>名称<th>权重<th>评分</th>
 !set v_=0
 !for i=1 to $gcnt
  !set t_=!item $i+2 of $titles
  $table_tr<td>$t_<td align=center>$(w$i)<td align=center>$(g_$i)</td>
 !next i
 $table_hdtr<th colspan=2>平均<td align=center>$mav</td>
 $table_end <p>
!else
 总平均: <b>$per</b> /$scoremax.
 !if $min_glob<$scoremax
  <br><small>班级的最低/中间/最高分:
  $min_glob/$mean_glob/$max_glob</small>
 !endif
 <p>
!endif

!if $eactivecnt>0
 $table_header$table_hdtr<th colspan=4>考试得分
!! !if $wims_user=supervisor
  </b><small>
  !href cmd=reply&job=examcheck&checkuser=$getuser [详情]
  </small>
!! !endif
 $table_hdtr<th>系列号<th>名称<th>得分/$scoremax
 !for i in $activexams
  !set l=!record $i of wimshome/log/classes/$wims_class/exams/.exams
  !set t=!line 4 of $l
  
  $table_tr<td align=right>$i
  <td align=center>$t
  <td align=center>$[rint(10*$(es_$i)*$scoremax)/100]
 !next i
 $table_end <p>
!endif

!for i=1 to $activecnt
 !set l_=!line $i of $activesheets
 !distribute items $l_ into n_,e_
 !set L_=!line $n_ of $defaultformula
 !default L_=1 2
 !distribute word $L_ into A_,B_
 !set t_=!item 3 to -1 of $l_
 !set t_=!char 1 to $title_limit of $t_
 !set v_=!getscorerequire sheet=$n_ user=$getuser
 !set w_=!wordcnt $v_
 !set S_=0
 !for k=1 to $w_
  !set a_=!word $k of $v_
  !set S_=$[$S_+$a_]
 !next k
 !if $S_<=0
  !goto next
 !endif
 $table_header$table_hdtr<th colspan=7>页 $i&nbsp;: $t_
 </b><small>权重 $A_, 严厉度 $B_<br>
 !set A_=!line $n_ of $percents
 !distribute words $A_ into p1,p2
 !if $p2!=$empty
  !distribute item $[$p1/100],$[$p2/10] into x_,y_
  !set p_=$[rint(100*$scoremax*$(f_$i))/100]
  完成 $p1%, 质量 $p2/10, 等价于 <b>$p_</b> 总分 $scoremax.
  !if $(min_$i)<$scoremax
   <br>班级的最低/中间/最高分: $(min_$i)/$(mean_$i)/$(max_$i)
  !endif
 !endif
 </small>
 $table_hdtr<th>编号<th>名称<th>分数<br>要求<th>权重
     <th>分数<br>得到<th>%<th>质量
 !for j=1 to $e_
  
  $table_tr<td align=right>$j
  <td>$(title_$(n_)_$j)
  <td align=right>
  !set v_=$(req_$(n_)_$j)
  $v_
  <td align=center>$(weight_$(n_)_$j)
  <td align=right>
  !set d_=!getscore user=$getuser sheet=$n_ work=$j
  !default d_=0
  $d_
  <td align=right>
  !if $v_>0
   $[round(100*$d_/$v_)]%
  !else
   ---
  !endif
  <td align=right>
  !set d_=!getscoremean user=$getuser sheet=$n_ work=$j
  !default d_=0
  $d_
 !next j
 $table_end <p>
 :next
!next i

