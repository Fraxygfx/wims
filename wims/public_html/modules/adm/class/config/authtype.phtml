		<li class="setting_item">
			<label for="up_ldap_version">ldap version</label>
			<input size="30" name="up_ldap_version" id="up_ldap_version" value="$class_ldap_version" />
		</li>
		<li class="setting_item">
			<label for="up_ldap_base">ldap base <span class="field_required">*</span></label>
			<input size="30" name="up_ldap_base" id="up_ldap_base" value="$class_ldap_base" />
