		<li class="setting_item">
			<label for="up_ldap_branch">ldap branch <span class="field_required">*</span></label>
			<input size="30" name="up_ldap_branch" id="up_ldap_branch" value="$class_ldap_branch" />
		</li>
		<li class="setting_item">
			<label for="up_ldap_uid">ldap uid</label>
			<input size="30" name="up_ldap_uid" id="up_ldap_uid" value="$class_ldap_uid" />
