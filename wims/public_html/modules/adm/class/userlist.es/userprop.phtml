!set inplen=40
!form reply
<input type=hidden name=job value=userprop>
<input type=hidden name=getuser value=$getuser>
<p>$table_header
$table_tr<th>Identificador de usuario (login)<td><tt>$getuser</tt>
$table_tr<th>Contraseña<td>
	!href module=adm/class/passwd&job=part&part=$getuser Cambiar
$table_tr<th><label for="up_lastname">Apellidos</label><td>
	<input size=$inplen name=up_lastname id=up_lastname value="$user_lastname">
$table_tr<th><label for="up_firstname">Nombre</label><td>
	<input size=$inplen name=up_firstname id=up_firstname value="$user_firstname">
$table_tr<th><label for="up_email">correo electrónico</label><td>
	<input size=$inplen name=up_email id=up_email value="$user_email">
$table_tr<th><label for="up_regnum">Número de inscripción</label><td>
	<input size=$inplen name=up_regnum id=up_regnum value="$user_regnum">
!if $wims_user=supervisor
 $table_tr<th><label for="up_comments">Comentarios</label><td>
	<input size=$inplen name=up_comments id=up_comments value="$user_comments">
 $table_tr<th><label for="up_vars">Variables (técnicas)</label></th><td>
	<textarea cols=$[$inplen-1] rows=4 name=up_vars id=up_vars>$user_vars</textarea>
!else
 $table_tr<th><label for="passcheck">Contraseña de la clase</label><td>
	<input size=14 type=password name=passcheck id=passcheck> <br>
	<small>Introduzca la contraseña para la inscripción de participantes</small>
!endif
$table_hdtr<td align=center colspan=2>
<input type=submit name=reg value=Guardar> &nbsp;
<input type=submit name=abandon value=Cancelar>
$table_end
