     !default n_=$s_
     !href cmd=reply&job=modteacher&teacher=$s_ $n_
    !endif
   !else
    Non-available
   !endif
   </td><td align=center>$c</td>
   !set c=!recordcnt $classdir1/$l_/.userlist
