!form reply
<input type=hidden name=job value=$job>
$table_header
<caption>
!if $form_caption!=$tmpty
 $form_caption
!endif
<small>
!if $passhow=yes
 !href cmd=reply&passhow=no 隐藏密码
!else
 !href cmd=reply&passhow=yes 显示密码
!endif
</small></caption>
$table_tr<td align=right>
$form_titlename:
<td><input size=30 name=title value="$title">
!if $form_level=yes
 $table_tr<td align=right>
年级:
 <td>
 !set alevel=$class_level
 !formselect alevel list $levellist prompt $levelnames
!endif
$table_tr<td align=right>
$form_classname的主持教师<sup>
!href cmd=help&special_parm=supervisor 帮助
</sup>:
<td>
!readproc scripts/teacherlist.proc
!formselect sup list $tlist1 prompt $tlist2
!if $form_prog=yes
 $table_tr<td align=right>
计划的格式<sup>
 !href cmd=help&special_parm=progopt 帮助
 </sup>:
 <td>
 !formselect progstyle1 list mandatory,optional prompt\
    必修, 选修
 $table_tr<td align=right>
自动创建课程<sup>
 !href cmd=help&special_parm=progopt 帮助
</sup>:
 <br><small>(对年级里的所有班级)</small>
 <td>
 !formselect progstyle2 list all,select prompt 是,否
!endif
!if $form_pass=yes
 $table_tr<td align=right>
注册密码<sup>
 !href cmd=help&special_parm=pass 帮助
</sup>:
 !if $passhow=yes
  <td><input type=text size=30 name=pass value="$pass">
 !else
  <td><input type=password size=30 name=pass value="">
  $table_tr<td align=right>
重复注册密码:
  <td><input type=password size=30 name=pass2 value="">
 !endif
!endif
$table_tr<td align=right>
主持教师密码<sup>
!href cmd=help&special_parm=passs 帮助
</sup>:
!if $passhow=yes
 <td><input type=text size=30 name=passs value="$passs">
!else
 <td><input type=password size=30 name=passs value="">
 $table_tr<td align=right>
重复主持教师密码:
 <td><input type=password size=30 name=passs2 value="">
!endif
$table_tr<td align=center colspan=2>
<input type=submit name=confirm value="提交">
!if $form_cancel!=$empty
 &nbsp;
 <input type=submit name=cancel value="取消">
!endif
$table_end
</form>

