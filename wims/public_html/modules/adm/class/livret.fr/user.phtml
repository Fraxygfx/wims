!!##!! language independant
!read adm/title.phtml 1\
$wims_classname - $wims_institutionname\
$livret_title\
$name_job

!if $error!=$empty
 !read msg.phtml $error
 !exit
!endif

!if $livret_nbcomp==0
 $name_no_competence
 !exit
!endif
<p>
$table_header
 $table_hdtr
  <th>$name_Competences / $name_n_Paliers</th>
  !for j=1 to $maxnbpalier
   <th valign=middle>$name_n_Palier $j</th>
  !next j
 </tr>
 !for k=1 to $livret_nbcomp
  $table_tr
   <td>
    $(title_$k)
   </td>
   !for j=1 to $(nbpalier_$k)
    !let t=!charcnt $(l_$(k)_$(j))
    !let desc=!record $j of wimshome/log/classes/$wims_class/livret/.comp$k
    !let desc=!line 1 of $desc
    !if $t>1
     !let note=$[rint($(l_$(k)_$(j)))]
     <td align="center" style="background-color: $(livret_color[$note+1]);"><a onmouseover="Tip('$desc',$tooltip_parm)">$note</a></td>
    !else
     <td align="center"><a onmouseover="Tip('$desc',$tooltip_parm)">&nbsp;</a></td>
    !endif 
   !next j
   !for j=$(nbpalier_$k)+1 to $maxnbpalier
     <td align="center" style="background-image:url(gifs/bg/crossgrey.gif);">&nbsp;</td>
   !next j
  </tr>
 !next k 
$table_end