<script language='javascript'>
  function addsheet(num,msg){
       ta1=window.opener.document.forms[0].elements['$cible'];
       ta1.value=ta1.value+' sheet n<sup>o</sup> '+num+' : \\exercise{module=adm%2Fsheet&+sh='+num+'}{'+msg+'}';
  }
  function addfile(msg){
     ta1=window.opener.document.forms[0].elements['$cible'];
     ta1.value=ta1.value+'<a href=\\filedir/'+msg+'>'+msg+'</a>';
  }
</script>

