!if $sccnt>0
 <p>$table_header
 <caption>Etablissements et groupements de classes</caption>
 $table_hdtr
 <th>Nom<th colspan=2>Elève</th><th>Administrateur</th><th>Statut</th>
 !for i=1 to $sccnt
  !set l=!line $i of $sclasses
  !distribute items $l into code,expire,inst,cl,la,ty,lv,pswd
  !if $superclass=$empty
   !set show=$inst
  !else
   !set show=$cl
  !endif
  !set supv=!item 9 of $l
  !if $supv=$empty
   !reset class_password
   !defread wimshome/log/classes/$code/.def
   !set supv=$class_supervisor
   !set pswd=$class_password
  !endif
  
  $table_tr<td align=center>
  !!!href module=$module&type=authparticipant&class=$code 
  $show
  </td> <td align=center>
  !href module=$module&type=authparticipant&class=$code Entrer
  </td> <td align=center>
  !href module=adm/class/reguser&class=$code&subclass=yes S'inscrire
  </td> <td align=center>
  $supv
  </td> <td align=center>
  !if $pswd=$empty
   ouvert
  !else
   protégé
  !endif
 !next i
 $table_end <p>
