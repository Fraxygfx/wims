<hr>

!if $sharable_all!=$empty
 <p>$table_header
 <caption>Classes pouvant partager vos ressources</caption>
 $table_hdtr<th>Ressource permise<th>Classe<th>Partage
 !for r in $sharable
  !for cl in $(sharable_$r)
   $table_tr<td align=center>$(name_$r)
   !set D_=!defof class_institution\
class_description in wimshome/log/classes/$cl/.def
   !distribute lines $D_ into i_,d_
   <td align=center>
   !href cmd=reply&job2=def&nei=$cl $i_<br>$d_
   !set s_=!defof $(sharing_$r) in wimshome/log/classes/$cl/neighbors
   !if $s_=$wims_class
    <td align=center>Actif
   !else
    <td align=center>---
   !endif
  !next cl
 !next r
 $table_end <p>
!endif

