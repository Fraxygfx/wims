!read adm/css.phtml
!if $(module_title_$moduclass_lang)!=$empty
  !set module_title=$(module_title_$moduclass_lang)
!endif
!read lang/names.phtml.$moduclass_lang
!read adm/class/classname.phtml $wims_classname\
$wims_institutionname

!header1
!read adm/title.phtml 1\
$classname\
$module_title

!set wims_menu_items=!append line usermanage,1,module=adm/class/usermanage\
 to $wims_menu_items
!if $cmd!=reply
$name_intro

!form reply
<input type="hidden" name="job" value="all" />
<div class="wimscenter wimsform"><input type="submit" name="reg" value="$wims_name_tosave" /></div>

$name_expert
!set wims_ref_class=wims_button_help
!href cmd=help $wims_name_help
!default job=$job
<fieldset class="property_fields blockcenter">
 <legend>$name_menu</legend>
 <div class="field box">
 !set wims_ref_class=wims_formradio
 !formcheckbox job list filter prompt $name_filter
 <textarea name="variable" cols="20" rows="3">$variable</textarea>
 </div>
 <div class="field box">
 !formcheckbox job list login prompt $name_loginlist
   <textarea name="loginlist" cols="20" rows="5">$loginlist</textarea>
</div>

</fieldset>

!formend
!goto end
!endif

!if $photourl_exists=0
 <p class="wimscenter"> $name_nophoto</p>
 !goto end
!endif
!set cmp=0
!set cmp_tr=0
<table><tr>
!for l_ = 1 to $cnt
  !set ll=$[ceil($l_/$lim)]
  !set u=!line $[$l_ - ($ll-1)*$lim] of $(list_user$ll)
  !if $(u[1])!=
  <td style="width:120px;">
  !if $(u[4])!=
    !href module=adm/class/userscore&job=getuser&getuser=$(u[1]) <img border="0" width="120px" src="$(u[4])" alt="$(u[2]) $(u[3])" />
    <br />$(u[2]) $(u[3])
  !else
     !href module=adm/class/userscore&job=getuser&getuser=$(u[1]) $(u[2]) $(u[3])
  !endif
  </td>
  !increase cmp_tr
  !increase cmp
  !if $cmp_tr=6
  </tr>
  !reset cmp_tr
  <tr>
  !endif
  !endif
  !reset u
!next
</table>

!if $cmd=reply
 !set wims_menu_items=!append line back2,1,cmd=resume\
 to $wims_menu_items
!endif
:end
!tail
