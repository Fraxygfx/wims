 <th>Code<th>Naam</th><th>-</th><th>Verantwoordelijke</th>
 <th><small>cursussen</small></th>
 </tr>
 !for i=1 to $progcnt
   !set l=!line $i of $programs
   !distribute items $l into l_,s_,t_,n_
   !set c=!record 0 of $classdir1/$l_/courses
   !set c=!nonempty lines $c
   !set c=!linecnt $c
   $table_tr<td align=center>$l_</td>
   <td align=center>
   !href cmd=reply&job=prog&prog=$l_ $t_
   </td><td align=center><small>
    !href cmd=reply&job=delprog&del=$l_ verwijder
   </small>
   </td><td align=center>
   !if $s_!=$empty
    !if $s_=supervisor
     $name_supervisor
    !else
     !default n_=$s_
     !href cmd=reply&job=modteacher&teacher=$s_ $n_
    !endif
   !else
    Niet beschikbaar
   !endif
   </td><td align=center>$c
 !next i
 $table_end
