# update_field is number of field to update

# update_content is the new content.
scnt=!recordcnt wimshome/log/classes/$wims_class/doc/.docindex
!for s=1 to $scnt
 doc_$s=!record $s of wimshome/log/classes/$wims_class/doc/.docindex
 doc_$s=!line 1 to 7 of $(doc_$s)\
\
\
\
\
\
\

!next s
!if $update_field!=0 
 doc_$doc=!replace line number $update_field by $update_content in $(doc_$doc)
!else
 !reset doc_$doc
!endif
!writefile wimshome/log/classes/$wims_class/doc/.docindex
!for s=1 to $scnt
  sf=!line 1 to 5 of $(doc_$s)
  !if $(sf[1])$(sf[2])!=$empty
   !appendfile wimshome/log/classes/$wims_class/doc/.docindex :$sf
  !endif
!next s

