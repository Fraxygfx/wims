
!set form_OK=Enviar la modificación
!set form_titlename=Título
!set form_caption=Propiedades del nivel
!set title=$class_description
!set sup=$class_Supervisor
!set alevel=$class_level
!read scripts/levelform.phtml
!readproc names
<p>
!if $classcnt=0
 Este nivel todavía no tiene clases.
 !href cmd=reply&job=addclass Crear una clase
.<sup>
 !href cmd=help&special_parm=structure#class ayuda
</sup>
!else
 $table_header
 <caption>Clases disponibles<sup>
 !href cmd=help&special_parm=structure#class ayuda
 </sup>en este nivel <small>
 !href cmd=reply&job=addclass Añadir&nbsp;otras&nbsp;clases
 </small></caption>
 $table_hdtr
 <th>Código<th>Nombre</th><th>-</th><th>Responsable</th>
 <th><small>Curso</small></th>
 <th><small>Participantes</small></th>
 </tr>
 !for i=1 to $classcnt
   !set l=!line $i of $classes
   !distribute items $l into l_,s_,t_,n_
   !set c=!record 0 of $classdir1/$l_/courses
   !set c=!nonempty lines $c
   !set c=!linecnt $c
   $table_tr<td align=center>$l_</td>
   <td align=center>
   !href cmd=reply&job=class&class=$l_ $t_
   </td><td align=center><small>
    !href cmd=reply&job=delclass&del=$l_ borrar
   </small>
   </td><td align=center>
   !if $s_!=$empty
    !if $s_=supervisor
     $name_supervisor
    !else
     !default n_=$s_
     !href cmd=reply&job=modteacher&teacher=$s_ $n_
    !endif
   !else
    No disponible
   !endif
   </td><td align=center>$c</td>
   !set c=!recordcnt $classdir1/$l_/.userlist
   <td align=center>$c</td>
 !next i
 $table_end

!endif

<p>
!if $progcnt=0
 Este nivel todavía no tiene programas educativos.
 !href cmd=reply&job=addprog Crear un programa
.<sup>
 !href cmd=help&special_parm=structure#program ayuda
