!!<html><head>
!!$wims_html_header
!!</head>
!!<body $wims_htmlbody>
!!!headmenu
!read adm/css.phtml
!header1

!read names.phtml

!if $cmd=help
 !read help.phtml
 !goto end
!endif

!if $job!=$empty and $job!=sheets
 !read $job.phtml
 !goto end
!endif

<center>$classname
<p>
<h1>List of participants
 </b><font size="-1">[
!href cmd=reply&job=csv spreadsheet data
 ]
</font>
</h1></center>

!if $error!=$empty
 <p>
 !read msg.phtml
 <p>
 !href module=home Back to the home page
. <p>
 !goto end
!endif

!if $usercnt==0
 This class doesn't have participant yet.
 [
 !href module=adm/class/reguser&step=1 Add a participant
 ]
!else
 <center>
 [
 !href module=adm/class/reguser&step=1 Add a participant
 ]
 !set deleted=!sh cd $wims_home/log/classes/$wims_class/.users; ls .[0-9a-zA-Z]* 2>/dev/null
 !set deleted=!trim $deleted
 !if $deleted!=$empty
  &nbsp;[
  !href cmd=reply&job=recover Deleted participants
  ]
 !endif
 </center> <p>$table_header
!bound job_affi within notes,points,qualite default notes
 !if $job_affi=notes
  <caption>Grades computed over a maximum of $scoremax</caption>
 !else
  !if $job_affi=qualite
   <caption>Quality computed over a maximum of 10</caption>
  !else
  !let tmp=!recordcnt wimshome/log/classes/$wims_class/sheets/.sheets
  !let tmp=!values v for v=1 to $tmp
  !let showsheet=!listintersect $showsheet and $tmp
   <caption>Percentage of carried out work.</caption>
  !endif
 !endif
 !if $manual>0 and $job_affi=notes
  $table_hdtr<th rowspan=2>Name, first name
  <th colspan=3>Average
  !for j in $showsheet
   !if E isin $j
    !set k=!char 2 to -1 of $j
    <th rowspan=2><small>exam $k</small>
   !else
    <th rowspan=2><small>
     !href cmd=reply&+job=showsheet&+numshowsheet=$j sheet $j
   !endif
  !next j
  $table_hdtr<th><small>global<th><small>teacher<th><small>auto
 !else
  $table_hdtr<th>Name, first name
 !if $job_affi=notes 
 <th>Average
 !endif
  !for j in $showsheet
   !if E isin $j
    !set k=!char 2 to -1 of $j
    <th><small>exam $k</small>
   !else
    <th><small>
     !href cmd=reply&+job=showsheet&+numshowsheet=$j sheet $j
    </small>
   !endif
  !next j
 !endif
 !distribute item 0,0,0 into mean_tea,mean_auto,mean_glob
 !distribute item 0,0,0 into cnt_tea,cnt_auto,cnt_glob
 !for i=1 to $usercnt
  !set uu=!record $i of wimshome/log/classes/$wims_class/.userlist
  !distribute items $uu into lastname,firstname,uu
  !set UU=!hex $uu
  $table_tr<td>
  !href cmd=reply&job=getuser&getuser=$uu $lastname, $firstname
  !read userscore
  !if $manual>0 and $job_affi=notes
   !set glob=$[rint($manual*$(manual_$UU)+(100-$manual)*($per))/100]
   <td align=center>$glob</td>
   <td align=center>$(manual_$UU)</td>
   <td align=center>$per</td>
   !distribute item $[$mean_glob+$glob],$[$mean_tea+$(manual_$UU)] into mean_glob,mean_tea
   !if $glob>0
    !advance cnt_glob
    !if $(manual_$UU)>0
     !advance cnt_tea
    !endif
    !if $per>0
     !advance cnt_auto
    !endif
   !endif
  !else
   !if $job_affi=notes
    <td align=center>$per</td>
    !if $per>0
     !advance cnt_auto
     !advance cnt_glob
    !endif
   !endif
  !endif
  !set mean_auto=$[$mean_auto+$per]
  !for j in $showsheet
   !if E isin $j
    !set k=!char 2 to -1 of $j
    !set p_=$[rint(10*$scoremax*$(es_$k))/100]
    !if NaN isin $p_
     !set p_=0
    !endif
    <td align=center>$p_</td>
   !else
    !set p_=!line $j of $percents
    !distribute words $p_ into p1,p2
    !if $job_affi=notes
     !if $p2!=$empty
      !distribute item $[$p1/100],$[$p2/10] into x_,y_ 
      !set p_=$[rint(100*$scoremax*$(f_$j))/100]
     !else
      !set p_=0
     !endif
     <td align=center>$p_</td>
    !else
     !if qualite iswordof $job_affi
      !set p_=$p2
      <td align=center>$p_</td>
     !else
      !set p_=$p1
      <td align=center>$p_ %</td>
     !endif
     !if $p2=$empty
      !set $p_=0
     !endif
    !endif
   !set per_$j=$[$(per_$j)+$p_]
   !if $p_>0
    !advance cnt_$j
   !endif
  !next j
 !next i
 !distribute item $[rint(100*$mean_auto/$usercnt)/100],\
	$[rint(100*$mean_tea/$usercnt)/100],\
	$[rint(100*$mean_glob/$usercnt)/100] into m_auto,m_tea,m_glob
 $table_hdtr<td align=center><b>Average of the class</b>
 !if $job_affi=notes
 !if $manual>0
  <td align=center>$m_glob</td>
  <td align=center>$m_tea</td>
  <td align=center>$m_auto</td>
 !else
  <td align=center>$m_auto</td>
 !endif
 !endif
 !for j in $showsheet
  <td align=center>$[rint(100*$(per_$j)/max(1,$usercnt))/100]</td>
 !next j
 !if $cnt_glob>0
  !distribute item $[rint(100*$mean_auto/max(1,$cnt_auto))/100],\
	$[rint(100*$mean_tea/max(1,$cnt_tea))/100],\
	$[rint(100*$mean_glob/max(1,$cnt_glob))/100] into m_auto,m_tea,m_glob
  $table_hdtr<td align=center><b>Average of positive scores</b>
  !if $manual>0
   <td align=center>$m_glob</td>
   <td align=center>$m_tea</td>
   <td align=center>$m_auto</td>
  !else
   <td align=center>$m_auto</td>
  !endif
  !for j in $showsheet
   <td align=center>$[rint(100*$(per_$j)/max(1,$(cnt_$j)))/100]</td>
  !next j
 !endif
 $table_end
 <p>Click on a name for the detail of his/her work.
 !href cmd=reply&job=formula&formula=prep Change severity levels
.
 !href module=adm/class/grades Manually entered grades
.
 !href module=adm/class/stat Statistics of activity
.
!href module=adm/class/activity Participant global activities
.
<p>
   Post
   !if $job_affi=notes
    !href cmd=reply&job_affi=qualite quality
    or
    !href cmd=reply&job_affi=points carried out work
   !else
    !if $job_affi=qualite
     !href cmd=reply&job_affi=notes grades
     or
     !href cmd=reply&job_affi=points carried out work 
    !else
     !href cmd=reply&job_affi=notes grades 
     or
     !href cmd=reply&job_affi=qualite quality
    !endif
   !endif
   of worksheet.  
 !if $activecnt>1
  <p>
  !form reply
  <input type=hidden name=job value=sheets>
  !set wims_formselect_switch=multiple size=$[min($activecnt+$eactivecnt,6)]
  <table border=0>
  <tr><td>Pick up sheets to show<br>averages per sheet:
  <td>&nbsp;&nbsp;
  !reset tmp
  !for i=1 to $activecnt
   !set sh=!line $i of $activesheets
   !set se=!item 1 of $sh
   !set ti=!item 3 to -1 of $sh
   !set ti=!replace internal , by &#44; in $ti
   !set tmp=!append item $se: $ti to $tmp
  !next i
  !set ash=$activesh
  !for i=1 to $eactivecnt
   !set tt=!item $i of $activexams
   !set l=!record $tt of wimshome/log/classes/$wims_class/exams/.exams
   !set l=!line 4 of $l
   !set l=!replace internal , by &#44; in $l
   !set tmp=!append item Exam $tt: $l to $tmp
   !set ash=!append item E$tt to $ash
  !next i
  !formselect showsheet list $ash prompt $tmp
  <td><input type=submit value="Show"></table>
  </form>
 !endif
!endif (usercnt=0?)
<p>
!if $manual>0
 <b>Explanations.</b> In the `Average' columns, `auto' means average of
 grades computed from scores obtained in work sheets, `teacher' means 
 average of grades attributed
 manually by the supervisor, and `global' is computed from the two other
 averages, by the formula
 <p><center>
  global = $[$manual/100]*teacher + $[1-$manual/100]*auto.
 </center> <p>
!endif

:end
!tail

!reset job,showsheet,getuser,getraw,delprep,deluser,formula,abandon,reg,\
	passcheck


