 !href cmd=reply&job=userprop&getuser=$getuser $lastname, $firstname
!else
$lastname, $firstname
!endif
<br><font size="-1">Nom de login&nbsp;: <tt>$getuser</tt>
!if $user_email!=$empty
 &nbsp;Adresse: <a href="mailto:$user_email">$user_email</a>
!endif
</font></h3>
  !if $user_photourl!=
   <img src="$user_photourl" width=100 style="position:absolute;top:auto;right:5%;" alt="$firstname $lastname">
