</center> <p>

!if $manual>0 and $gcnt>0 and $teacher!=$empty
 $table_header
 <caption><small>
 min/moyen/max de la classe&nbsp;:
 $min_glob/$mean_glob/$max_glob</small></caption>
 $table_hdtr<th>Nom<th>Pourcentage<th>Qualité
 $table_hdtr<td>Notes attribuées par l'enseignant
     <td align=center>$manual%<td align=center>$mav
 $table_hdtr<td>Notes enregistrées par le serveur
     <td align=center>$[100-$manual]%<td align=center>$per
 $table_hdtr<td><b>Moyenne globale</b> (sur $scoremax)
     <td align=center>100%<th>$globalav
 $table_end <p>
 $table_header$table_hdtr<th colspan=3>Notes attribuées par l'enseignant
 !if $teacher!=$empty
  <br>
  !href lang=$lang&module=adm/class/grades&method=user&un=$getuser Modifier
 !endif
 </th>
 $table_hdtr<th>titre<th>poids<th>note</th>
 !set v_=0
 !for i=1 to $gcnt
  !set t_=!item $i+2 of $titles
  $table_tr<td>$t_<td align=center>$(w$i)<td align=center>$(g_$i)</td>
 !next i
 $table_hdtr<th colspan=2>Moyenne<td align=center>$mav</td>
 $table_end <p>
!else
 <center>
 Moyenne globale&nbsp;: <b>$per</b> sur $scoremax.
 !if $min_glob<$scoremax
  <br><small>min/moyen/max de la classe&nbsp;:
  $min_glob/$mean_glob/$max_glob</small>
 !endif
 </center> <p>
!endif


!!readdef wimshome/log/classes/$wims_class/.def
!!default class_topscores=0
!if $class_topscores>0
 <center>
 $table_header$table_hdtr<th colspan=2>Top $class_topscores des moyennes de la classe </td></tr>
 !for i=1 to $class_topscores 
  !set L=!line $i of   $TT
  !set name=!item 1 of $L
  !set firstname=!item 2 of $L
  !set avg=!item 4 of $L
$table_tr<td align=right><b><small>$name $firstname&nbsp;</small></b><td align=left><small>&nbsp;$avg</small>
 !next i
 $table_end<p>
 </center> 
!endif

!if $eactivecnt>0
 $table_header$table_hdtr<th colspan=4>Notes d'examens
 !if $wims_user=supervisor or $class_examshow!=no
  <small>
  !href cmd=reply&job=examcheck&checkuser=$getuser [détail]
  </small>
 !endif
 $table_hdtr<th>Numéro<th>Titre<th>Note/$scoremax
 !for i in $activexams
  !set l=!record $i of wimshome/log/classes/$wims_class/exams/.exams
  !set t=!line 4 of $l
  
  $table_tr<td align=right>$i
  <td align=center>$t
  <td align=center>$[rint(10*$(es_$i)*$scoremax)/100]
 !next i
 $table_end <p>
!endif

!for i=1 to $activecnt
 !set l_=!line $i of $activesheets
 !distribute items $l_ into n_,e_
 !set L_=!line $n_ of $defaultformula
 !distribute word $L_ into A_,B_
 !set t_=!item 3 to -1 of $l_
 !set t_=!char 1 to $title_limit of $t_
 !set v_=!getscorerequire sheet=$n_ user=$getuser
 !set w_=!wordcnt $v_
 !set S_=0
 !for k=1 to $w_
  !set a_=!word $k of $v_
  !set S_=$[$S_+$a_]
 !next k
 !if $S_<=0
  !goto next
 !endif
 $table_header$table_hdtr<th colspan=7>Feuille $i&nbsp;: $t_
 <small>poids $A_, sévérité $B_<br>
 !set A_=!line $n_ of $percents
 !distribute words $A_ into p1,p2
 !if $p2!=$empty
  !distribute item $[$p1/100],$[$p2/10] into x_,y_
  !set p_=$[rint(100*$scoremax*$(f_$i))/100]
  $p1% fait, qualité $p2/10, équiv. <b>$p_</b> sur $scoremax.
  !if $(min_$i)<$scoremax
   <br>min/moyen/max de la classe : $(min_$i)/$(mean_$i)/$(max_$i)
  !endif
 !endif
 </small>
 $table_hdtr<th>No<th>titre<th>points<br>requis<th>poids
     <th>points<br>obtenus<th>%<th>qualité
 !for j=1 to $e_
  $table_tr<td align=right>$j
  <td>$(title_$(n_)_$j)
  <td align=right>
  !set v_=$(req_$(n_)_$j)
  $v_
  <td align=center>$(weight_$(n_)_$j)
  <td align=right>
  !set d_=!getscore user=$getuser sheet=$n_ work=$j
  !default d_=0
  $d_
  <td align=right>
  !if $v_>0
   $[round(100*$d_/$v_)]%
  !else
   ---
  !endif
  <td align=right>
  !set d_=!getscoremean user=$getuser sheet=$n_ work=$j
  !default d_=0
  $d_
 !next j
 $table_end <p>
 :next
!next i
