<html><head>
$wims_html_header
</head>
<body>

<script language='javascript'>
  function addsheet(num,msg){
       ta1=window.opener.document.forms[0].elements['$cible'];
       ta1.value=ta1.value+' feuille de travail n<sup>o</sup> '+num+' : \\exercise{module=adm%2Fsheet&+sh='+num+'}{'+msg+'}';
  }
  function addexam(num,msg){
       ta1=window.opener.document.forms[0].elements['$cible'];
       ta1.value=ta1.value+' Examen n<sup>o</sup> '+num+' : \\exercise{module=adm%2Fclass%2Fexam&+exam='+num+'}{'+msg+'}';
  }
  function addfile(msg){
     ta1=window.opener.document.forms[0].elements['$cible'];
     ta1.value=ta1.value+'<a href=\\filedir/'+msg+'>'+msg+'</a>';
  }
</script>

!let nb=!itemcnt $sheet_nums
!if $nb!=0
  Ajout d'une feuille de travail :<br>
  !for i in $sheet_nums
   <a href="javascript:addsheet($i,'$(sheet_titles[$i])');">$(sheet_titles[$i])</a> ; &nbsp; 
  !next i
!endif

!let nb=!itemcnt $exam_nums
!if $nb!=0
  <p>
  Ajout d'un examen :<br>
  !for i in $exam_nums
   <a href="javascript:addexam($i,'$(exam_titles[$i])');">$(exam_titles[$i])</a> ; &nbsp; 
  !next i
!endif

!if $nbfile > 0
 <p>
  Ajout d'un fichier :<br>
  !for i=1 to $nbfile
   <a href="javascript:addfile('$(file_titles[$i])');">$(file_titles[$i])</a> ; &nbsp; 
  !next i
!endif

</html>