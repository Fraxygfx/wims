
!if $votecnt<1
 !if $wims_user!=supervisor
  Non sono definiti questionari. Verifica con il docente.
  !exit
 !else
  Non sono definiti questionari.
 !endif
!else
 !if $wims_user!=supervisor
  !if $active<1
   Non ci sono questionari attivi. Verifica con il docente.
   !exit
  !endif
 !endif
 Elenco dei questionari definiti per il corso.
 <ul>
 !for t=1 to $votecnt
   !set l_=!record $t of $votedir/.votes
   !distribute lines $l_ into vote_status,vote_title,vote_option,vote_show
   !default vote_title=Senza titolo
   !set vcnt=!defof vcnt in $votedir/$t.votes
   !default vcnt=0
   !if $wims_user!=supervisor
    !if $vote_status iswordof 1 2
     <li>
     !href cmd=reply&job=read&vote=$t $vote_title
     !if $vote_show>0
      ($(name_$vote_status), $(name_$vote_option), $vcnt risposte)
     !else
      ($(name_$vote_status), $(name_$vote_option))
     !endif
    !endif
   !else
    <li>
    $vote_title
    <small>($(name_$vote_status), $(name_$vote_option), $vcnt risposte)</small>
    !href cmd=reply&job=read&vote=$t [leggi]
&nbsp;
    !href cmd=reply&job=edit&vote=$t [modifica]
&nbsp;
    !href cmd=reply&job=csv&vote=$t [esporta]
   !endif
 !next t
 </ul>
!endif

