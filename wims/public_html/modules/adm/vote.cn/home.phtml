      ($(name_$vote_status), $(name_$vote_option))
     !endif
    !endif
   !else
    <li>
    $vote_title
    <small>($(name_$vote_status), $(name_$vote_option), $vcnt 票)</small>
    !href cmd=reply&job=read&vote=$t [阅读]
