!set wims_name_adddevel=Add a new developer account
!set wims_name_develaccount=List of developer accounts

!if $job2 iswordof mod1 mod2 del1
 !read developer/$job2.phtml
 !set wims_menu_items=!append line develaccount,1,cmd=reply&job2=first\
to $wims_menu_items
!! <p><center>
!! !href cmd=reply&job2=first List of developer accounts
!! </center> <p>
 !exit
!endif

<p>$table_header
<caption>Registered module developers on this server</caption>
$table_hdtr
<th>Login<th>Name<th>Action
!for d=1 to $devcnt
 !distribute lines $(drec$d) into login,passwd,name,email
 $table_tr
 <td align=center>$login
 <td align=center>
 <a href="mailto:$email">$name</a>
 <td nowrap><small>
 !href cmd=reply&job2=del1&devno=$d Erase
&nbsp;
 !href cmd=reply&job2=mod1&devno=$d Properties
&nbsp;
 !href module=adm/modtool&login=$login&passwd=$passwd&jobreq=modname Visit
</small>
!next d
$table_end <p>
!!<center>
!!!href cmd=reply&job2=mod1&devno=0 Add a new developer account
!!</center> <p>
!set wims_menu_items=!append line adddevel,1,cmd=reply&job2=mod1&devno=0\
to $wims_menu_items

!form reply
<input type=hidden name=job2 value=pub>
Developers who are allowed to install modules in the site's local
subdirectory: (enter login names) <br>
<input size=50 name=devpublisher value="$devpublisher">
<input type=submit value=OK>
</form>

!reset job2,devno,devlogin,devpasswd,devname,devemail,devpublisher

