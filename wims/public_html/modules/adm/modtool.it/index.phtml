!set size=50

!if $title=$empty or $modreq=.new
 !set this=il tuo nuovo modulo
!else
 !set this=il modulo attualmente in lavorazione
!endif
!form reply
<input type=hidden name=jobreq value=flist>
$table_header
<caption>Proprietà di $this</caption>

$table_tr<td align=right nowrap>Indirizzo
 <td>
 !if $title!=$empty and $modreq!=.new
  <tt>$modreq</tt>&nbsp;
  !href cmd=reply&jobreq=move&original=devel/$auth_login/$modreq cambia nome
&nbsp;
  !href cmd=reply&jobreq=copy&original=devel/$auth_login/$modreq copia
 !else
  !set modreq=.new
  !read scripts/addressform.phtml nook
 !endif

$table_tr<td align=right nowrap><label for="i_title">Titolo</label>
 <td><input size=$size name=i_title id="i_title" value="$i_title">

$table_tr<td align=right nowrap><label for="i_description">Descrizione</label>
 <td><input size=$size name=i_description id="i_description" value="$i_description">

$table_tr<td align=right nowrap><label for="i_language">Lingua</label>
 <td>
 !default i_language=$module_language
 !formselect i_language list $langlist prompt $langname

$table_tr<td align=right nowrap><label for="i_category">Tipo</label>
 <td nowrap>
 !set wims_formselect_switch=multiple
 !formcheckbox i_category list exercise,tool,document,recreation,oef,deductio\
   prompt exercice, outil, document, récréation, OEF, Deductio

$table_tr<td align=right nowrap><label for="i_domain">Dominio</label>

 <td>
 <input size=$size name=i_domain id="i_domain" value="$i_domain">
<small>
!href cmd=help&special_parm=domain aide
</small>
 $table_tr<td align=right nowrap><label for="i_level">Livello(i)</label>
 <td>
 !formcheckbox i_level list $levellist
 <br><small>E: scuola primaria; H: scuola secondaria; U: università;
 <br>G: dottorato; R: rircerca</small>

$table_tr<td align=right nowrap><label for="i_scoring">Punteggio automatico<br></label>
 <small>(esercizio / ricreazione)</small>
 <td>
 !default i_scoring=no
 !formradio i_scoring list yes,no prompt Si, No

$table_tr<td align=right nowrap><label for="i_version">Versione</label>
 <td>
 !default i_version=1.00
 <input type=text size=6 name=i_version id="i_version" value="$i_version">
 <small>Da aumentare ogni volta che si pubblica una nuova versione!</small>

$table_tr<td align=right nowrap><label for="i_wims_version">versione wims</label>
 <td>
 !default i_wims_version=$wims_version
 <input type=text size=6 name=i_wims_version id="i_wims_version" value="$i_wims_version">&nbsp;
 !href cmd=help&special_parm=wimsversion $wims_name_help

$table_tr<td align=right nowrap><label for="i_author">Autore</label>
 <td>
 !default i_author=$auth_name
 <input type=text size=$size name=i_author id="i_author" value="$i_author">

$table_tr<td align=right nowrap><label for="i_address">Indirizzo e-mail dell'autore</label>
 <td>
 !default i_address=$auth_email
 <input type=text size=$size name=i_address id="i_address" value="$i_address">

$table_tr<td align=right nowrap><label for="i_translator">Traduttore</label>
 <td>
 <input type=text size=$size name=i_translator id="i_translator" value="$i_translator">

$table_tr<td align=right nowrap><label for="i_translator_address">Indirizzo email del traduttore</label>
 <td>
 <input type=text size=$size name=i_translator_address id="i_translator_address" value="$i_translator_address">

$table_tr<td align=right nowrap><label for="i_require">Software<br>richiesto</label>
 <td>
 !formcheckbox i_require list $swlist prompt $swname

$table_tr<td align=right nowrap><label for="i_keywords">Parole chiave</label>
 <td><input size=$size name=i_keywords id="i_keywords" value="$i_keywords">

$table_tr<td align=right nowrap><label for="i_copyright">Copyright</label>
 <td>
 !set wims_formselect_switch=
 !formselect i_copyright list gnu prompt GNU General Public License

$table_hdtr<td align=center nowrap colspan=2>
<input type=submit name=inddef value="$wims_name_tosave">
&nbsp;&nbsp;
<input type=submit value="$wims_name_giveup">
$table_end
</form>

