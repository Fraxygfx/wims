!set size=50

!if $title=$empty or $modreq=.new
 !set this=Uw nieuwe module
!else
 !set this=de module in ontwikkelings stadium
!endif
!form reply
<input type=hidden name=jobreq value=flist>
$table_header
<caption>Eigenschappen van $this:</caption>

$table_tr<td align=right nowrap>Adres
 <td>
 !if $title!=$empty and $modreq!=.new
  <tt>$modreq</tt>&nbsp;
  !href cmd=reply&jobreq=move&original=devel/$auth_login/$modreq hernoemen
&nbsp;
  !href cmd=reply&jobreq=copy&original=devel/$auth_login/$modreq dupliceren
 !else
  !set modreq=.new
  !read scripts/addressform.phtml nook
 !endif
$table_tr<td align=right nowrap>Titel
 <td><input size=$size name=i_title value="$i_title">

$table_tr<td align=right nowrap>Omschrijving
 <td><input size=$size name=i_description value="$i_description">

$table_tr<td align=right nowrap>Taal
 <td>
 !default i_language=$module_language
 !formselect i_language list $langlist prompt $langname

$table_tr<td align=right nowrap>Type
 <td nowrap>
 !set wims_formselect_switch=multiple
 !formcheckbox i_category list exercise,tool,document,recreation,oef,deductio \
  prompt oefening,hulpmiddel,document,recreatie,oef,deductio

$table_tr<td align=right nowrap>Domein

 <td>
 <input size=$size name=i_domain value="$i_domain">
<small>
!href cmd=help&special_parm=domain help
</small>
$table_tr<td align=right nowrap>Niveau
 <td>
 !formcheckbox i_level list $levellist
 <br><small>E: lagere school; H: middelbare school; U: universiteit;
 <br>G: promotie onderzoek; R: research</small>

$table_tr<td align=right nowrap>Scorings mechanisme<br>
 <small>(oefening / recreatie)</small>
 <td>
 !default i_scoring=no
 !formradio i_scoring list yes,no prompt Ja, Nee

$table_tr<td align=right nowrap>Versie
 <td>
 !default i_version=1.00
 <input type=text size=6 name=i_version value="$i_version">
 <small>Niet vergeten het versie nummer te verhogen, wanneer U een nieuwe versie publiceert
 </small>
$table_tr<td align=right nowrap>wims_version
 <td>
 !default i_wims_version=$wims_version
 <input type=text size=6 name=i_wims_version value="$i_wims_version">&nbsp;
 !href cmd=help&special_parm=wimsversion help

$table_tr<td align=right nowrap>Auteur
 <td>
 !default i_author=$auth_name
 <input type=text size=$size name=i_author value="$i_author">

$table_tr<td align=right nowrap>Emailadres van de auteur
 <td>
 !default i_address=$auth_email
 <input type=text size=$size name=i_address value="$i_address">

$table_tr<td align=right nowrap>Vertaler
 <td>
 <input type=text size=$size name=i_translator value="$i_translator">

$table_tr<td align=right nowrap>Emailadres van de vertaler
 <td>
 <input type=text size=$size name=i_translator_address value="$i_translator_address">

$table_tr<td align=right nowrap>Vereiste software [aangeven verplicht]
 <td>
 !formcheckbox i_require list $swlist prompt $swname

$table_tr<td align=right nowrap>Zoektermen
 <td><input size=$size name=i_keywords value="$i_keywords">

$table_tr<td align=right nowrap>Copyright
 <td>
 !set wims_formselect_switch=
 !formselect i_copyright list gnu prompt GNU General Public License

$table_hdtr<td align=center nowrap colspan=2>
<input type=submit name=inddef value="OK en Versturen">
&nbsp;&nbsp;
<input type=submit value="Annuleren">
$table_end
</form>

