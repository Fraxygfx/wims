#! /bin/sh

for j in `ls` ; do
 if [ -d "$j" ]; then rm $j/icon.css ; touch $j/icon.css ;
     echo "div.menuitem {
     text-align:right;
}" > icon.css
     for i in `ls $j/*.gif` ; do file=`basename $i .gif` ; echo "a.$file{
        background-image: url(/wims/gifs/themes/$i);
        background-repeat:no-repeat;
 background-position:center left;
 padding-left:22px;
 margin-left:0em;
}" >> icon.css; done ;
  mv icon.css $j ; fi; 
done
