<!-- Tail menu definition.-->
!! Tail menu theme.
!nocache
!set wims_theme_tail=yes

!! Ligne supprimant le menu lors de l'integration de la page via le lecteur exportable : 
!if embeded_window notin $special_parm3

<div class="wimstail" align="center" >

!if $wims_homeref_special!=$empty
 <small>$wims_homeref_special</small>
 </div>
 !exit
!endif


<div id="wimsmenumodubox" style="background-color:$wims_ref_bgcolor;">
<div class="wimsmenu">
 !for i_=1 to $wims_homeref_n0
  !set 1_=!line $i_ of $wims_rm_0
  !if $(1_[1])=
   <div class="itemsep"></div>
  !else
   <div class="menuitem">
     !read oneitem.phtml $1_
   </div>
  !endif
 !next i_
</div><!--wimsmenu-->
</div><!--wimsmenumodubox-->



<table class="wimstail" style="width:60%;">
<tr><td style="background-color:$wims_homeref_bgcolor" colspan="$wims_homeref_n2">

!! Navigation items :
<ul style="display:inline;padding:0" >
!for i_=1 to $wims_homeref_n1
 !set 1_=!line $i_ of $wims_rm_1
 !set class_css=!item 1 of $1_
 !if $window != embeded or $class_css notitemof home,intro
 <li align="center" id="footer_$class_css" class="wims_footer" class="wimstail" style="display:inline">

  <small style="padding-right:1em;padding-left:1em">
   !read oneitem.phtml $1_
  </small>
  !if $i_ < $wims_homeref_n1
   &nbsp; |  &nbsp; 
  !endif
 </li>
 !endif
!next i_
</ul>

</td>
</tr>

!if $wims_user=supervisor
 !set userTYPE=supervisor_
!else
 !set userTYPE=student_
!endif

<tr>
!for i_=1 to $wims_homeref_n2
<td align="center">
<div style="background-color:$wims_homeref_bgcolor" class="wimstail">
<small id="$userTYPE$1_">
 !set 1_=!line $i_ of $wims_rm_2
 !read oneitem.phtml $1_
 </small>
</div> 
</td>
!next i_
</tr>
</table>

</div>
