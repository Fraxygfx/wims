<!-- begin of _widgets/language_selector.phtml -->
!! input variables : wims_language_cnt, wims_site_languages

<ul class="wimsmenu langues">
	!for i=1 to $wims_language_cnt
	 !set l=!word $i of $wims_site_languages
	 !if $l!=$lang
	  !if $wims_language_cnt<3
	   !set l_=<span class="legende" >$(lang_name_$l)</span>
	  !else
	   !if $wims_language_cnt<6
	    !set l_=<span class="legende small">$(lang_name_$l)</span>
	   !else
	    !reset l_
	   !endif
	  !endif
	  <li class="menuitem">
	   !set wims_ref_title=$(Lang_name_$l)
	   !href lang=$l&session=$wims_session.1&module=$module <span class="vignette"><img src="gifs/$l.gif" alt="$(Lang_name_$l)"/></span>$l_
	  </li>
	 !endif
	!next i
</ul>
<!-- end of _widgets/language_selector.phtml -->
