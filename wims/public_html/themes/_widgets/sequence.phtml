 <!-- _widgets/sequence.phtml -->
 <ul class="inline">
 <li><span class="wims_doc_item">$wims_name_doc</span></li>
 <li><span class="wims_sheet_item">$wims_name_Sheets</span></li>
 <li><span class="wims_exam_item">$wims_name_Examens</span></li>
 <li><span class="wims_vote_item">$wims_name_Votes</span></li>
 </ul>
 !if $seq_cnt >1 and $seq=$empty
  <br />
  <ul id="wims_seq_summary" class="inline">
  !for i=1 to $seq_cnt
 <li>
  <a class="wims_button" href="#wims_seq_$i">$wims_name_sequence $i </a>
 </li>
  !next
  </ul>
 !endif
 !set seq_reverse=!defof sequence_reverse in wimshome/log/classes/$wims_class/seq/.def
 !if $seq>0
  !read ./sequence.phtml $seq
  !reset seq
 !else
  !for i=1 to $seq_cnt
   !if $seq_reverse=yes
    !set u=$[$seq_cnt+1-$i]
   !else
    !set u=$i
   !endif
   !read ./sequence.phtml $u
  !next
 !endif
 <!--end  _widgets/sequence.phtml -->

!if $seq_cnt>0
 !read themes/_widgets/user_varsheet.phtml
 !read themes/_widgets/user_varexam.phtml
!endif

