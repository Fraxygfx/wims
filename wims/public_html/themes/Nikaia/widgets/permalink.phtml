<!-- $wims_theme/widgets/permalink.phtml -->

!! -----------------------Insert "Permalien" --------------------------------
!! Permalien / lecteur exportable : ces lignes permettent d'integrer facilement la page courante a un autre site :

!set current_module=!replace / by , in $module

!set module_path= !item 1 of $current_module	
!if $module_path notitemof home,adm,classes and _exam notin $session and $wims_lightpopup!=yes and ($wims_user=supervisor or $wims_user=$empty) and ($cmd=intro or $cmd=$empty)
	!set permalien=$wims_ref_name?module=$module

<li class="topmenuitem" id="header_export">
<div id="lien_export_media" style="display:block">
	<a href="#" class="about" onclick="document.getElementById('export_media').style.display = 'block';document.getElementById('lien_export_media').style.display = 'none';">$wims_name_display1</a>
</div><!--lien_export_media-->
<div id="export_media" style="display:none;text-align:left;">
<div class="wimscenter"> -- <strong>$wims_name_display1</strong> 
-- &nbsp; <a href="#" onclick="document.getElementById('export_media').style.display = 'none';document.getElementById('lien_export_media').style.display = 'block';">
($wims_name_mask_this)</a></div><!--wimstail-->
	<hr/>
	<label for="wims_permalink">$wims_name_permalink1</label><br/> 
	 <span class="small">($wims_name_display2)</span> :
	<input id="wims_permalink" name="wims_permalink" value="$permalien" size="70"/>
	<hr/>
	<label for="wims_embed_textarea">$wims_name_embeddable<br/>
	<span class="small"> ($wims_name_display3) :
	</span></label>
	<textarea style="vertical-align:middle" rows="3" cols="50" readonly="readonly" id="wims_embed_textarea" name="wims_embed_textarea" >&lt;iframe src="$permalien&+embededwindow=true" title="WIMS embeddable" frameborder="0" class="wims_embed" style="width:100%;height:100%;min-height:800px;" allowfullscreen>&lt;/iframe></textarea>
</div><!--export_media-->
</li><!--topmenuitem-->

!endif
<!-- end _widgets/permalink.phtml -->