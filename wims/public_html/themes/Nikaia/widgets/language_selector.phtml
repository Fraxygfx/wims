<!-- begin of $wims_theme/language_selector.phtml -->
!! input variables : wims_language_cnt, wims_site_languages

<ul class="wimsmenu langues">
	!for i=1 to $wims_language_cnt
	 !set l=!word $i of $wims_site_languages
	 !if $l!=$lang
	  !if $wims_language_cnt>2 and $wims_language_cnt<6
	   !set l_=<small>$(lang_name_$l)</small>
	  !else
	   !if $wims_language_cnt<6
	    !set l_=$(lang_name_$l)
	   !else
	    !reset l_
	   !endif
	  !endif
	  <li class="menuitem">
	   !href lang=$l&session=$wims_session.1&module=$module <img src="gifs/$l.gif" alt="$(Lang_name_$l)"/>$l_
	  </li>
	 !endif
	!next i
	<li class="itemsep"></li><!--itemsep-->
</ul>
<!-- end of $wims_theme/language_selector.phtml -->
