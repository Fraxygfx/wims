<!-- begin of $wims_theme/visitor.phtml -->
!! WIMS main entrance page theme.
!nocache
!if $module!=home
 !exit
!endif

!set wims_name_browse=$N_browse2

!set home_theme=yes
!set table_colors=$wims_ref_bgcolor,$wims_ref_bgcolor
</div>

<div id="wimsfrontpage">

	<div id="wimstopbox">

    	!!Site Title
		!read themes/_widgets/site_title.phtml

		!!Institution logo
		!read themes/$wims_theme/widgets/institution_logo.phtml		

		!!Language Selector
		!read themes/_widgets/language_selector.phtml

		
		<br class="spacer"/>

		<!--wimsmenu menuglobal-->
		
		<ul class="wimsmenu menuglobal">
			!!!if $gotcnt<=0 and $s_keywords=$empty
			<li class="menuitem">
			!set wims_ref_class=home
			!href module=home $wims_name_home
			</li><!--menuitem-->
			<!--
			<span class="menuitem">
			!read ./adm/oneitem.phtml n_participant,1,module=adm/class/classes&type=participant
			</span>
			-->
			<li class="menuitem">
			!read ./adm/oneitem.phtml n_supervisor,1,module=adm/class/classes&type=supervisor
			</li><!--menuitem-->
			
			<!--
			<span class="menuitem">
			!read ./adm/oneitem.phtml n_example,1,module=adm/class/classes&type=example
			</span>
			!!!endif
			-->	
			<li class="menuitem">
			!read ./adm/oneitem.phtml help,4,module=help/main,help
			<!--!read ./adm/oneitem.phtml help,4,module=themes/$wims_theme/help/main,help-->	
			</li>	 
		</ul><!--wimsmenu-->
		!read themes/_widgets/authlogout.phtml
	</div><!-- fin de wimstopbox-->

	<div id="wimsbodybox">				
		<div id="wimspagebox">
			<div class="wimsbody">
			
				!read themes/_widgets/manager.phtml
				
				<!--Contenu de la page d'accueil-->
				
    			<!--Recherche exercices-->
    			!read themes/$wims_theme/widgets/search_engine.phtml
    			<!--Recherche classes-->
    			!read themes/$wims_theme/widgets/search_classe.phtml
				
				<br class="spacer"/>
				
				<!--Recherche avancée exercices
				!read themes/$wims_theme/lang/home.phtml.fr-->
				
				
				<!--Résultats recherche exercices-->
				!if $s_category=V
				 !read ./front.phtml
				!else
				 !read ./result.phtml
				!endif
				
			</div><!--end wimsbody-->
		</div><!--wimspagebox-->
			
		!set wims_show_stat=!tolower $wims_show_stat	
			
	</div><!--wimsbodybox-->
				
	!read themes/$wims_theme/widgets/menubox.phtml

	!read themes/$wims_theme/widgets/tailbox.phtml

</div><!--wimsfrontpage-->


</body>
</html>
