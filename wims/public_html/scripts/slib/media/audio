!if $wims_read_parm!=slib_header
 !goto proc
!endif
slib_title=Audio insertion
slib_parms=3\
,URL of the data file\
,option for the audio insertion
,option=rename
slib_author=Bernadette Perrin-Riou
slib_out=  Audio insertion in html page
slib_comment=default option :height="60" width="140" autostart="false" loop="false" width="0"  height="0"
slib_example=\imagedir/exemple.mp3\
http://...

!exit

:proc
!if ...adm/ isin ...$module or .. isin $wims_read_parm or $wims_read_parm=$empty
 !exit
!endif

!distribute items $wims_read_parm into slib_son,slib_option, slib_option2

!default slib_option=height="60" width="140" autostart="false" loop="false" width="0"  height="0"
slib_option2 = !getopt option in $slib_option2
!if rename iswordof $slib_option2 
   slib_son=!rename $slib_son
!endif

slib_out =<embed src="$slib_son" $slib_option > <noembed> <bgsound src="$slib_son"></noembed></embed>


