slib_lang_exists_tmp=yes

slib_title=Graph draw with one colored connex component 
slib_parms=4\
,matrix (which represents a non oriented graph with no cycles)\
[blue,red,green, magenta, brown, purple,gold], component colors\
[1,2,..],vertex name\
,list of points

slib_out=code for draw of the graph
slib_comment=the matrix must be between brackets, if color are three numbers, put them in brackets ; if there are points,\
connex components of these points are taken first.
 
slib_require=pari