slib_lang_exists_tmp=yes
slib_title=Meter

slib_parms=5\
,position of the needle: number between the range (between -7 and 7)\
[-6,6],range between -7 and 7\
[0,,20,,40,,60,,80,,100,,120],texts on graduations\
[black,black,black,transparent],color: [graduation,texte,pin,background]\
raw,option word : <tt>url</tt>, <tt>html</tt> or <tt>raw</tt>

slib_out= Meter with configurable needle

slib_comment=The first item of the output is: by default, the flydraw code (option word <tt>raw</tt>); \
the address of the generated image if the option word is <tt>url</tt> ; \
the html code for inserting image if the option word is the option <tt>html</tt>.