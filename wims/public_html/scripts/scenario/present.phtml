
$presentation
<$ltype>
!if $all_steps=0
 !for i=1 to $step
  <li>
  !line $i of $picked
 !next i
!else
 !if $status=waiting
  !form reply
  !for i=1 to $step
   <li>
   <input type=checkbox name=badstep value=$i>
   !line $i of $picked
  !next i
 !else
  !for i=1 to $step
   <li>
   !if $i isitemof $badstep
    <img src="gifs/blueball.gif" alt="blue">
   !endif
   !if $i isitemof $bad_steps
    <img src="gifs/redball.gif" alt="red">
   !endif
   !line $i of $picked
  !next i
  !set explain=yes
 !endif
!endif
</$ltype>
!if $step>=$stepcnt
 ($END)<p>
!endif

!if $explain=yes
 (<img src="gifs/blueball.gif alt="blue">&nbsp;: $n_mark&nbsp;;&nbsp;&nbsp;
 <img src="gifs/redball.gif" alt="red">&nbsp;: $n_badstep.)
 <p>
!endif

