!set phtmldir=authors/jm.evers/phtml
!set jsdir=scripts/authors/jm.evers/js
!set gifdir=scripts/authors/jm.evers/gifs

!set max_s=40
!header
!form new
!set talen=en nl cn fr it
!if $lang notin $talen
    !set taal=en
    !set translated=0
!else
    !set translated=1
    !set taal=$lang
!endif
!set s=0

!for p=1 to 100
    !set competence=!record $[-1*$p] of lang/remarks.$taal
    !if $competence=$empty
	!goto READY
    !else    
	!increase s
	!set sum=!append word <li>$competence</li> to $sum
	!set selecttext=!append line <option value="$s">$competence</option> to $selecttext
    !endif
!next p
:READY
    <input type=hidden name=module value="$module">
    <hr width="50%">
	<p align="center">
	    <font color="red">
		<em>
		    <a onmouseover="return escape('$module_title<br> est un module néerlandais produit par <em>SCHAERSVOORDE AALTEN</em></b><br><img src=$gifdir/schaersvoorde.jpg>')">
			Configuration
		    </a>
		</em>
	    </font>
	</p>
    <hr width="50%">
    <div align="center">
	<table bgcolor=$bgcolor2>
	    <tr>
	    <td>
		<p align="left">
		!if $translated=0
		    !! mylaguages are defined in the actual module (intro.phtml)
		     <a onmouseover="return escape('Sorry<br>No support for $lang')">
			<small>
			    <em>
				<font color="red">
				Désolé,<br>
				mais les langages disponibles de ce module sont: <b>$talen</b><br>
				Actuellement, il n'y a pas de version pour <b>$lang</b><br>
				Le module est à l'origine en néerlandais et sera par défaut en anglais.
				</font>
			    </em>
			</small>
		    </a>
		    !set taal=en
		!endif
		<p align="left">
		      <a onmouseover="return escape('<ol>$sum</ol><br>Ce module a $s sujets différents<br>En général, chaque sujet a 4 niveaux.')">
	    		Quel <font color="blue">sujet</font> ?:
		    </a>
		    <select name="subject">
			!for p=1 to $s
			    !line $p of $selecttext
			!next p
		    </select>
		</p>
		<p align="left">
		     <a onmouseover="return escape('Chaque sujet peut avoir 4 niveaux de difficultés <br>et le niveau par défaut est <em>progressif</em>')">
			Régler le <font color="blue">niveau</font> de difficulté de cet exercice:
		    </a>
		    <select name="level">
	    		<option value=0>progressif</option>
			<option value=1>facile</option>
	    		<option value=2>normal</option>
	    		<option value=3>difficile</option>
	    		<option value=4>très difficile</option>
		    </select>
		</p>
		<p align="left">
		     <a onmouseover="return escape('Tous les exercices ont un maximum de 10 questions à la fois pour un score.')">
			Régler le <font color="blue">nombre</font> d'exercices:
		    </a>
		    <input size=10 name="total_exos" value=3>
		</p>
		<p align="left">
		     <a onmouseover="return escape('Quelle précision veut-on pour les réponses numériques ?<br><em>Précision mathématique</em> signifie <em>1.4142</em> est pénalisé si <em>&radic;2</em> est demandé</em><br>Le défaut est <em>non pertinent</em> ce qui signifie que c\'est à l\'exercice de décider ...<br> Note: le module peut toujours changer vos choix si nécessaire.')">
			<font color="blue">Précision</font> de la réponse&nbsp;?
		    </a>
		    <select name="rounding">
			<option value=-1>non pertinent</option>
			<option value=0>précision mathématique</option>
	    		<option value=100000>5 décimales</option>
	    	    	<option value=10000>4 décimales</option>
			<option value=1000>3 décimales</option>
	    		<option value=100>2 décimales</option>
	    		<option value=10>1 décimale</option>
	    		<option value=1>entiers</option>
		    </select>
		</p>
		!if $usage=$empty
		<p align="left">
		     <a onmouseover="return escape('Il peut y avoir quelques <em>paramètres configurés par défaut </em><ul><li><font color=green><b>Examen formel</b></font>  signifie une vérification très stricte de la réponse et <em>uniquement le score</em> à la fin, sans accès à la réponse juste<li><font color=green><b>Examen test</b></font>  a une vérification moins rigide mais il n\'y a toujours que le score à la fin du test<li><font color=green><b>Entraînement</b></font>  donne toutes les aides disponibles et la réponse correcte complète,  avec des informations supplémentaires éventuellement<li><font color=red> <b>Paramétrages particuliers </b></font> vous propose un <em>nouveau menu</em>  avec accès à <em>tous</em> les réglages possibles<br> comme Mathpreview, taille des fonts, images, aide, calculatrices, limites de temps <br> et vous permet de créer un ensemble de liens HTML vers cette version spécifique de cet exercice.<li><font color=blue><b>Version imprimable</b></font> propose un nouveau menu<br> où vous pourrez créer l\'exercice pour un test sur papier <br><em>Cela n\'est possible que si l\'exercice est intéressant sur papier : les applets et d\'autres questions sont exclues.</em> <br>Vous pouvez aussi <em>redimensionner les images</em>  et même réarranger les éléments de l\'exercice  pour que la disposition soit meilleure sur papier (utilise un cross browser DHTML)<br>Il y a une limite <em>codée en dur</em> au nombre de questions en une fois</ul> ')">
			<font color="blue">Utilisations</font> de cet exercice:
		    </a>
		    <select name="usage">
			<option value=2>Entraînement</option>
			<option value=4>Paramétrages particuliers</option>
			<option value=3>Version imprimable</option>
			<option value=1>Examen test</option>
	    		<option value=0>Examen formel</option>
			<option value=6>tous les liens html pour ce module</option>
		    </select>
		</p>
		!endif
		<div align="center">
	    	    <table>
			<tr>
			<th>
			    <input type="hidden" name="taal" value="$taal">
			    <p>
				<input style="color:black;background-color:lightgreen;font-weight:normal;font-size:14px" type="submit"  value="La CONFIGURATION est OK">
			    </p>
			</th>
			</tr>
		    </table>
		</div>
	    </td>
	    !if $usage=3 or $usage=4
	    <input type="hidden" name="usage" value="5">
	    </tr><tr>
	    <td>
	    <hr width="50%">
		!if devel isin $module_dir
		<p align="left">
		    De style libre ,Choix multiple ,Drag&Drop? 
		      <a onmouseover="return escape('Cette variable peut être paramétrée différemment <br>ou individuellement pour un fichier d\'exercices.<br>Tous les exercices de style libre ne peuvent pas être mis en choix multiple en choissisant ce $$questiontype here<br><br>Un module utilisant  GeoGebra pour un $$subject  sera<br>indépendant des paramétrages que vous donnerez ici...')">
			<font color=blue>ou GeoGebra</font>
		    </a>
		    <select name="questiontype">
			<option value=0>Réponses de style libre</option>
		    	<option value=1>Choix multiples</option>
		    	<option value=2>Glisser et déposer</option>
		    	<option value=3>Hotspot</option>
			<option value=0></option>
			<option value=0></option>
			<option value=0></option>
		    	<option value=4>GeoGebra</option>
		    	<option value=5>GeoGebra+image</option>
