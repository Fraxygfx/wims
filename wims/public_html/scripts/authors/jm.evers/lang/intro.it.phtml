!set phtmldir=authors/jm.evers/phtml
!set jsdir=scripts/authors/jm.evers/js
!set gifdir=scripts/authors/jm.evers/gifs

!set max_s=40
!header
!form new
!set talen=en nl cn fr it
!if $lang notin $talen
    !set taal=en
    !set translated=0
!else
    !set translated=1
    !set taal=$lang
!endif
!set s=0
!for p=1 to 100
    !set competence=!record $[-1*$p] of lang/remarks.$taal
    !if $competence=$empty
	!goto READY
    !else    
	!increase s
	!if # isin $competence
	    !set competence=!replace internal # by $empty in $competence
	    !set selecttext=!append line <option value="$s"></option> to $selecttext
	!endif
	!set sum=!append word <li>$competence</li> to $sum
	!set selecttext=!append line <option value="$s">$competence</option> to $selecttext
    !endif
!next p
:READY
    <input type=hidden name=module value="$module">
    <hr width="50%">
	<p align="center">
	    <font color="red">
		<em>
		    <a onmouseover="return escape('$module_title<br> è un modulo WIMS olandese creato da <em>SCHAERSVOORDE AALTEN</em></b><br><img src=$gifdir/schaersvoorde.jpg>')">
			Opzioni 
		    </a>
		</em>
	    </font>
	</p>
    <hr width="50%">
    <div align="center">
	<table bgcolor=$bgcolor2>
	    <tr>
	    <td>
		<p align="left">
		!if $translated=0
		    !! mylanguages are defined in the actual module (intro.phtml)
		    <a onmouseover="return escape('Sorry<br>No support for $lang')">
			<small>
			    <em>
				<font color="red">
				Spiacente,<br>
				ma il modulo è disponibile solo nelle seguenti lingue: <b>$talen</b><br>
				In questo momento non è diponibile in <b>$lang</b><br>
                                Il modulo originale è olandese, ma di default viene mostrato in inglese.
				</font>
			    </em>
			</small>
		    </a>
		    !set taal=en
		!endif
		<p align="left">
		     <a onmouseover="return escape('<ol>$sum</ol><br>Questo modulo contiene $s diverse tipologie di esercizio<br>solitamente ognuna ha 4 livelli di difficoltà')">
	    		Su quale <font color="blue">argomento</font> vuoi lavorare?:
		    </a>
		    <select name="subject">
			!for p=1 to $s
			    !line $p of $selecttext
			!next p
		    </select>
		</p>
		<p align="left">
		    <a onmouseover="return escape('Ogni tipologia di esercizio può avere 4 livelli di difficoltà <br>e il livello di default è <em>progressivo</em>')">
			Scegli <font color="blue">il livello di difficoltà</font> dell' esercizio:
		    </a>
		    <select name="level">
	    		<option value=0>livello progressivo</option>
			<option value=1>facile</option>
	    		<option value=2>normale</option>
	    		<option value=3>difficile</option>
	    		<option value=4>molto difficile</option>
		    </select>
		</p>
		<p align="left">
		    <a onmouseover="return escape('Tutte le tipologie di esercizio sono composte da una sequenza di massimo 10 quesiti per assegnare un punteggio')">
			Scegli <font color="blue">il numero</font> degli esercizi:
		    </a>
		    <input size=10 name="total_exos" value=3>
		</p>
		<p align="left">
		    <a onmouseover="return escape('Che precisione desideri per quanto riguarda le riposte numeriche?<br><em>Precisione matematica</em> significa che <em>1.4142</em> non sarà accettato al pari di <em>&radic;2</em></em><br>Di default troverai <em>non applicabile</em> che significa: lascia decidere all\'esercizio ...<br>Nota bene: il modulo potrebbe comunque ignorare le tue scelte')">
