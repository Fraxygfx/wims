</script>

!set wims_texsize=$mytexsize

!if $debug=1
    !if $wims_exec_error != $empty
	<p align="center">
	    <span style="schaersvoorde_alarm">$wims_exec_error</span>
	</p>
    !endif
!endif
<ul class="horizontal_list">
    <li class="horizontal_list">
	<ul class="left_list">
	!if $exotitle != $empty
	    <li>
		<kbd>$exotitle</kbd>
	    </li>
	!endif
	!if $roundingtext!=$empty
	    <li>
		<span class="schaersvoorde_alarm">
		$roundingtext
		</span>
	    </li>
	!endif
	    <li>
		<span class="schaersvoorde_alarm">
		    $no_back_button
		</span>
	    </li>
	!if exam notin $session
	    <li>
		!href target=wims_mhelp module=$module&+session=$session&+cmd=help <img src="$gifdir/help.jpg" alt="help" />
		<a onmouseover="return escape('$helptext')"><img src="$gifdir/tip.jpg" alt="tip" /></a>
	    </li>
	!endif
	</ul>
    </li>
    <li class="horizontal_list">
	<div id="alarmtext" style="opacity:0.8;position:absolute;top:0px;left:0px;z-index:100;display:none;background-color:yellow;border:4px solid red;width:400px;"></div>
    </li>
    <li class="horizontal_list">
	<ul class="right_list">
	    <li>
		<textarea id="stickit_area" cols="20" rows="3" style="display:none;background-color:yellow;font-size:16px;border:2px solid red;width:220px;height:60px;"></textarea>
	    </li>
	!if $viewlogo=1
	    <li>
		<a onmouseover="this.T_OPACITY=70;this.T_PADDING=10;this.T_BORDERCOLOR='red';this.T_BORDERWIDTH=1;return escape('$logotext')">
		    $logo
		</a>
	    </li>
	!endif
	!if $questiontype isin 0,7
	    !if $mathview isin 1,2
	    <li>
		!if exam isin $session
		    !! hope this is not interfering with something important...
		    !set help_session=!nospace $session _mhelp
		!else
		    !set help_session=!replace internal . by , in $session
		    !set help_session=!item 1 of $help_session
		    !set help_session=!nospace $help_session _ mhelp
		!endif
		<a onmouseover="return escape('$mathchecktext')" onclick="wims_help=window.open('$wims_ref_name?wims_window=new&+lang=nl&+session=$help_session&+module=$module&+cmd=help&+myvar4=$session','wims_help','status=no,toolbar=no,location=no,menubar=no,scrollbars=yes,resizable=yes')">
		    <img src="$gifdir/math.jpg" alt="mathematical inputfield" style="border:0px" />
		</a>
	    </li>
	    !endif
	!endif
	!if $scribbling=1
	    <li>
		<a onclick="javascrip:showScribble();" onmouseover="return escape('Post-It Memo')" >
		    <img src="$gifdir/pencil.png" style="width:50;height:70;border:0px" alt="scribling" />
		</a>
	    </li>
	!endif
	!if $calculator=3
	    <script type="text/javascript">
	    //<![CDATA[
		function ReadCalculator(){var calc=document.getElementById("javacalculator").ReadApplet();if(confirm("$send \n"+calc)){total=encodeURIComponent(calc);URL = '$wims_ref_name?session=$session&+module=$module&+cmd=reply&+reply$n='+calc ;document.location.href = URL;document.getElementById("calculator").destroy();}
	    //]]>
	    </script>
	    <li>
		<object id="javacalculator" width="100" height="50" classid="java:Rekenmachien.class" type="application/x-java-applet;jpi-version=1.4">>
		    <param name="java_codebase" value="$appletdir" />
		    <param name="java_archive" value="Rekenmachien.jar" />
		    <param name="java_code" value="Rekenmachien.class" />
		    <param name="fontsize1" value="10" />
		    <param name="fontsize2" value="10" />
		    <param name="fontsize2" value="14" />
		    <param name="language" value="$taal" />
		    <param name="pencolor1" value="0,0,0" />
		    <param name="pencolor2" value="255,0,15" />
		    <param name="bgcolor1" value="200,250,255" />
		    <param name="#fffff0" value="200,210,210" />
		    $nojava
		</object>
		<br/>
		<input style="font-size:8px;background-color:orange" type="button" onclick="javascript:ReadCalculator();" value="$send" />
	    </li>
	!else
	    !if $calculator=2
		<li>
		    <a onclick="window.open('$htmldir/mathcalc.html','calculator','width=280,height=370,left=0,top=0')">
			<img src="$gifdir/xcalc.png" style="border:0px" alt="calculator" />
		    </a>
		</li>
	    !else
		!if $calculator=1
		    <li>
			<a onclick="window.open('$htmldir/basicalc.html','calculator','width=300,height=200,left=0,top=0')">
			    <img src="$gifdir/xcalc.png" style="border:0px" alt="calculator" />
			</a>
		    </li>
		!endif
	    !endif
	!endif
	!if $debug=1
	    <li>
		!href target=wims_mhelp session=$session&+module=$module&+cmd=help
		<img src="$gifdir/exec.png" style="border:0px" alt="debug-info" />
	    </li>
	!endif
	!if $time=1
	    <li>
		<ul>
		    <li>
			<input style="text-align:center;background-color:#c6e8ff;color:#ff0000;font-size:14pt;" type="text" id="time" size="7" />
		    </li>
		    <li>
			<a target="nieuw" href="http://www.mozilla-europe.org/$taal/"><img src="$gifdir/getFireFox.gif" style="border:0px" alt="get FIREFOX" /></a>
		    </li>
		</ul>
	    </li>
	!endif
	</ul>
    </li>
</ul>
<div style="text-align:left;left-margin:2px;>
    !if $goback=1
	<span class="schaersvoorde_alarm">
	    $errortext &nbsp;
	</span>
    !else
	!if $goodbadsign>0
	    <span class="schaersvoorde_alarm">
		$(remark$[$n-1]) &nbsp;
	    </span>
	!endif
    !endif
    !if $try = $maxtry
	!set alarm=!record 52 of $remarkdir/commonremarks.$taal
	<div style="color:red;background-color:yellow;border:2px solid red;width:400px">
	    $alarm
	</div>
    !endif
    !if $total_exos>1
	$questionnumber $n)
    !endif
</div>
