<table style="width:100%" >
    <tr>
    <td style="vertical-align:top;text-align:left;float:left;white-space:nowrap">
	!if $exotitle != $empty
		<kbd>$exotitle</kbd>
	    <br/>
	!endif
	!if $roundingtext!=$empty
		<span class="schaersvoorde_alarm">
		    $roundingtext
		</span>
	    <br/>
	!endif
	<span class="schaersvoorde_alarm">
	    $no_back_button
	</span>
	!if exam notin $session
	    <br/>
