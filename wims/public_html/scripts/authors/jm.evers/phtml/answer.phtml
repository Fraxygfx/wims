!set wims_texsize=$mytexsize
!set n=$counter
!if $showanswer=0
    $finalresult
    !! to ensure playback of the exam is possible
    !if $wims_user=supervisor
	<p align="center">
	<font color=red>Alert: these results are only visible for the <em>supervisor</em></font>
	<table bgcolor=$bgcolor2 cellpadding=10 cellspacing=$cellspacing border=1>
	    !for n=1 to $total_exos
		<td valign="top">
		    <small>
			!if $total_exos >1
			    $questionnumber <b>$n</b>)<p>
			!endif
			$(question$n)
			!if $(formula$n) !=$empty
			    <br>
			    !insmath $(formula$n) 
			!endif
			!if $(texanswer$n) != $empty
			    <p>
			    !insmath $(texanswer$n)
			!endif
			!if $(textanswer$n) != $empty
			    <p>
			    <font color=green>$(textanswer$n)</font>                                                                     
        		!endif 	
		    </small>
		</td>
		<td  valign="top">
		    <small>
			$youranswer
			!if $(reply$n) != $empty
			    <p>
			    !ifval $multiimage=1
				!ifval $plot=1
				    !insplot $(reply$n)
				!else
				    !ifval $draw=1
					!insdraw $(reply$n)
				    !endif
				!endif
			    !else	
				!ifval $math=1
				    !insmath $(reply$n)
				!else
				    $(reply$n)
				!endif
			    !endif
			!endif
		</small>
	    </td>
	    <tr>
	!next n
    </table>
    </p>
    !endif
!else
    <p align="center">
    <table bgcolor=$bgcolor2 cellpadding=10 cellspacing=$cellspacing border=1>
	!for n=1 to $total_exos
	    <td valign="top">
		<small>
		    !if $total_exos >1
			$questionnumber <b>$n</b>)<p>
		    !endif
		    $(question$n)
		    !if $(formula$n) !=$empty
			<br>
			!insmath $(formula$n) 
		    !endif
		    !if $(texanswer$n) != $empty
			<p>
			!insmath $(texanswer$n)
		    !endif
		    !if $(textanswer$n) != $empty
			<p>
			<font color=green>$(textanswer$n)</font>                                                                     
        	    !endif 	
		</small>
	    </td>
	    <td  valign="top">
		<p align="center">
		    !if $(image$n) != $empty
			!ifval $plot=1
			    !set insplot_set=$(image_settings$n) ; size 0.5,0.5;
			    !insplot $(image$n)
			!endif
			!ifval $draw=1
			    !if $(image_settings$n) != $empty
				!set insdraw_size=$(image_settings$n)
			    !endif
			    !insdraw $(image$n)
			!endif
		    !endif
		</p>
	    </td>
	    <td  valign="top">
		<small>
		    $youranswer
		    !if $(reply$n) != $empty
			<p>
			!ifval $multiimage=1
			    !ifval $plot=1
				!set insplot_set=$(image_settings$n) ; size 0.5,0.5;
				!insplot $(reply$n)
			    !endif
			    !ifval $draw=1
				!insdraw $(reply$n)
			    !endif
			!else	
			    !ifval $math=1
				!insmath $(reply$n)
			    !else
				$(reply$n)
			    !endif
			!endif
			<hr>
		    !endif
		    !ifval $goodbadsign>0	
			<em>
			    $(remark$n)
			</em>
		    !endif
		</small>
	    </td>
	    <tr>
	!next n
    </table>
    </p>
    $finalresult
!endif
!ifval $try >0 and $module_score !=0
    <br>
    !set s=!record 87 of $remarkdir/commonremarks.$taal
    <font size="-1" color="red">$s</font>
!endif
!exit
