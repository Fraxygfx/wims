!set text=!item 2 to -1 of $wims_read_parm
!set option=$(wims_read_parm[2])

!if option isin $option and [ isin $option
  !set option=!getopt option in $option
  !set option=!declosing $option
  !set text=!item 3 to -1 of $wims_read_parm
!else
  !set option=$empty
  !set text=!item 2 to -1 of $wims_read_parm
!endif
!if $option=$empty
  !set option=FONTSIZE, '14pt', ABOVE, 'true'
!endif

!set prompt=$(wims_read_parm[1])
!if $prompt != $empty
 !set special_out= <script type="text/javascript" src="scripts/js/wz_tooltip.js"></script>
 !set text=!replace internal ' by \' in $text
!set text=!replace internal $\
$ by  $ in  $text
!set special_out=$special_out\
<a onmouseover="Tip('$text', $option)">$(wims_read_parm[1])</a>
$special_out
 !! <a onmouseover="return escape('$(wims_read_parm[1])')">$prompt</a>
 !! <script type="text/javascript" src="scripts/js/wz_tooltipold.js"></script>
