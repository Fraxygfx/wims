!set proc=oef
<br><center><hr width="35%"></center> <br>

!if robot isin $session
 !changeto content.html
!endif

!if $wims_class!=$empty and $wims_user=supervisor
 !distribute line $wims_oefdefault_qnum\
$wims_oefdefault_qcmlevel\
$wims_oefdefault_scoredelay\
$wims_oefdefault_qcmpresent\
$wims_oefdefault_presentsol\
$wims_oefdefault_check into qnum,qcmlevel,scoredelay,intro_qcmpresent,intro_presentsol,intro_check
 !let special_parm2=expert
!endif

!if ////classes/ isin ////$module
 !set class_header=wimshome/log/classes/$wims_class/
!endif

!read $(class_header)Exindex
!set exocnt=!itemcnt $exolist
!set qcnt=$[min($exocnt,8)]
!if $exocnt<1
 !if $wims_user=supervisor and #classes/ isin #$module
  !href module=adm/createxo Klik hier
  om een nieuwe oefening te maken.
 !else
 Helaas , er is geen enkele oefening beschikbaar op dit moment.
 Kom later nog eens terug !
 !endif
 !exit
!endif
!if $exocnt=1
 Deze module bevat op dit moment een enkele oefening,<b> 
 !item 1 of $titlelist
 </b>.
 !set exoo=!item 1 of $exolist
 !href cmd=new&module=$module&exo=$exoo Laat zien.
 !exit
!endif

!form new
<input type=hidden name=module value="$module">
<center><table border=0><tr>
!set special_parm=!trim $special_parm
!if select iswordof $special_parm2 and $special_parm!=$empty
 <td align=center>Oefeningen<br>
 <em><font color=blue> $special_parm </font></em>&nbsp;:<td>
!else
 <td align=center>Kies de oefening :<td>
!endif
!read oef/select.phtml
<tr><td align=center>Een serie heeft<td>
!default qnum=1
!formselect qnum from 1 to 9
oefeningen.
<tr><td align=center>Moeilijkheidsgraad<td>
!default qcmlevel=3
!formselect qcmlevel from 1 to 9
<tr><td align=center>Tijdslimiet<td>
<input size=7 name=scoredelay value="$scoredelay"> seconden.
</td></tr>
!read introhook.phtml
!if expert iswordof $special_parm2
   <tr><td align=center>
   Het aantal items bij een meerkeuze vraag: </td><td>
   !default intro_qcmpresent=4
   !formselect intro_qcmpresent list 2,3,4,5,6,7,8 
   </td></tr>
   <tr><td align=center>Geef een uitgewerkte oplossing (mits aanwezig)</td><td>
   !default intro_presentsol=1
   !formselect intro_presentsol list 0,1,2 prompt nooit,alleen als de score niet maximaal is,altijd
   </td></tr>
   <tr><td rowspan=4>&nbsp;</td><td>
   !default intro_check=1,2,3,4   
   !formcheckbox intro_check list 1 prompt altijd
   de goede oplossing bij een meerkeuze vraag laten zien.
   </td></tr>
   <tr><td align=left>
   !formcheckbox intro_check list 2 prompt Strafpunten bij een fout antwoord in een meerkeuze vraag.
   </td></tr>
   <tr><td align=left>
   !formcheckbox  intro_check list 3 prompt Laat het goede antwoord zien.
   </td></tr>
   <tr><td align=left>
   !formcheckbox intro_check list 4 prompt Geef een hint (mits aanwezig).
   !let tmp=!replace word expert by $ in $special_parm2
   </td></tr>
   <tr><td colspan=2 align=center>
   !href module=$module&special_parm=$special_parm&special_parm2=$tmp Simpel menu
   <input type=hidden name=intro_expert value=yes>
!else
   <tr><td colspan=2 align=center>
   !let tmp=$special_parm2 expert
   !href module=$module&special_parm=$special_parm&special_parm2=$tmp Expert menu
!endif
</table></center> <br><center>
<input type=submit value="Aan het werk">&nbsp;
<input type=submit name=print value="Printbare versie">
</center>
</form>

!if $exocnt>10
 !form intro
 <input type=hidden name=special_parm2 value=select>
 <input type=hidden name=module value="$module">
 Zoek naar oefeningen met in de titel het woord:
 <input size=12 maxlength=12 name=special_parm value="$oldparm">
 <input type=submit value=OK>
 </form>
!endif

